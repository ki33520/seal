@import "../../common/common";
@import "../../common/router";
@import "../../common/header";
@import "../../common/ordergoods";

body {
    background: #EDEDED;
}
$gray-color = #999

.detail-panel {
    background: #FFF;
    padding: .5rem .4rem;
    margin: 0 0 .3rem 0;
    &>h3 {
        padding-bottom: .4rem;
        margin-bottom: .3rem;
        color: $gray-color;
        font-size: .7rem;
        border-bottom: .05rem solid #E0E0E0;
    }
}

.detail-row {
    margin: 0;
    color: $gray-color;
    em {
        font-style: normal;
        padding-left: .4rem;
        color: #333;
    }
}

.order-detail-content {
    font-size: .7rem;
    .order-status {
        @extend .detail-panel;
        margin-top: .3rem;
        &>p {
            @extend .detail-row;
            padding-bottom: .4rem;
            border-bottom: .05rem solid #E0E0E0;
        }
        .order-status-progress {
            padding-top: .4rem;
            display: flex;
            justify-content: center;
            align-items: center;
            &>li {
                font-size: .6rem;
                flex: 1.25;
                &:last-child {
                    flex: 1;
                }
                &>.progress-item {
                    display: flex;
                    &>div {
                        text-align: center;
                        &>p {
                            margin: 0;
                            text-align: center;
                        }
                        &:first-child {
                            &>.iconfont {
                                font-size: .8rem;
                                padding: 0 0 .2rem 0;
                                display: block;
                            }
                        }
                        &>.iconfont {
                            font-size: .6rem;
                            padding: 0 .1rem;
                        }
                    }
                    &>div:last-child {
                        align-self: flex-end;
                    }
                }
            }
        }
    }
    .order-brief {
        @extend .detail-panel;
        &>p {
            @extend .detail-row;
            padding: .2rem 0;
        }
    }
    .order-goods {
        @extend .detail-panel;
        .order-group {
            padding: 0;
        }
    }
    .order-receiver {
        @extend .detail-panel;
        &>p {
            @extend .detail-row;
            padding: .2rem 0;
            display: flex;
            align-items: flex-start;
            &>span {
                flex: 1;
            }
            &>em {
                flex: 4;
            }
        }
    }
    .order-totalfee {
        @extend .detail-panel;
        margin-bottom:3rem;
        &>p {
            @extend .detail-row;
            padding: .2rem 0;
            display: flex;
            align-items: flex-start;
            &>span {
                flex: 1;
            }
            &>em {
                flex: 3;
                text-align: right;
                &>span:last-child{
                    padding-left:.15rem;
                }
            }
        }
    }
    .order-footer {
        display:flex;
        align-items: center;
        justify-content:space-between;
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        background: #FFF;
        z-index: 100;
        border-top: .05rem solid #DBDBDB;
        height: 2.5rem;
        padding: 0 .4rem;
        .order-footer-button{
            &>a {
                margin: .3rem .3rem .3rem 0; 
                padding: .1rem .5rem;
                line-height: 1.4rem;
                font-size: .7rem;
                text-align: center;
                display: inline-block;
                color: #FFF;
                background: $pink-color;
                border-radius: .15rem;
                border:.05rem solid $pink-color;
                &.light{
                    background:#FFF;
                    color:$pink-color;
                }
            }
        }
        .order-sumprice {
            color: #AAA;
            &>b {
                color: #333;
                padding-left: .25rem;
                font-weight: 400;
                &>span:last-child{
                    padding-left:.15rem;
                }
            }
        }
    }
}

.logistics-traces{
    padding-top:.5rem;
    .logistics-trace{
        display:flex;
        justify-content:center;
        align-items:center;
        .logistics-trace-status{
            flex:1;
            align-self:stretch;
            text-align:center;
            display:flex;
            justify-content:center;
            &>span{
                align-self:stretch;
                width:.2rem;
                background:#BABABA;
                position:relative;
                &>em{
                    display:block;
                    position:absolute;
                    width:1rem;
                    height:1rem;
                    background:url(/client/asset/image/logistics-spot-empty.png) no-repeat 0 0;
                    background-size:90%;
                    top:0;
                    left:-0.35rem;
                }
            }
        }
        .logistics-trace-desc{
            flex:8;
            margin-top:-0.2rem;
            padding-bottom:.5rem;
            &>p{
                margin:0;
                font-size:.7rem;
                &:last-child{
                    margin:.4rem 0;
                }
            }
        }
        &.active{
            .logistics-trace-status>span{
                background:#00DE25;
                &>em{
                    background-image:url(/client/asset/image/logistics-spot.png)
                }
            }
            .logistics-trace-desc{
                color:#00DE25;
            }
        }
        &:last-child{
            .logistics-trace-status>span{
                background:#FFF;
            }
        }
    }
}
