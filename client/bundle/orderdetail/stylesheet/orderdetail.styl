@import "../../common/common";
@import "../../common/switcher";
@import "../../common/iconfont";
@import "../../common/header";
@import "../../common/ordergoods";
@import "../../component/gotop";
@import "../../component/slidetabs";
@import "../../component/alert";
@import "../../component/dialog";
@import "./orderdetail.css";

html,body{
	background-color: #f5f5f5;
}
.order-detail-container{
    height:100%;
    &>div{
    	height:100%;
        .switcher{
        	.switcher-case{
        		box-shadow: none;
	        	background-color: none;
	        	-webkit-overflow-scrolling: inherit;
	        	position: static;
	        	display: none;
	        	&.active{
	        		display: block;
	        	}
	        }
        }
    }
}
.order-detail-content{
	height: 100%;
	overflow: hidden;
    background-color: #f5f5f5;
    padding-bottom: 1.17rem;
    .order-detail-info{
    	height: 100%;
    	overflow-y: auto;
	    -webkit-overflow-scrolling: touch;
    	&.order-bottom{
    		padding-bottom: 1.3rem;
    	}
    }
    &.logistics-content{
    	padding-bottom: 0;
    }
    &.comment-content{
	    
	}
}
.container {
	height: 100%;
	.trendy-content{
		height:100%;
		overflow:hidden;
	}
}

.back-to-top{
	bottom:px2rem(50);
}
.stars-culm{
	float: right;
	display: flex;
	padding: 0 .2rem;
	line-height: 1rem;
	.stars{
		flex: 4;
		display: flex;
		text-align: left;
		color: #ffdd00;
		.iconfont{
			flex: 1;
			padding: 0 .1rem;
			font-size: .5rem;
		}
		
	}
}
.slide-tabs {
	.slide-tabs-navbar {
		height: 1.16rem;
		width: 100%;
		background-color:white;
	    border-bottom: px2rem(1) solid #d7d7d7;
	    .slide-tabs-navbar-item {
			line-height: 1.16rem;
			border: none;
			&.active {
				i {
					color: #801da1;
    				border-bottom:.053333rem solid #801da1;
				}
			}
		}
	}
	.slide-tabs-content{
    	padding-bottom: 1.17rem;
		height: 100%;
		overflow: hidden;
		&.fixed{
			width: 100%;
		}
		.slide-tabs-item{
            width: 10rem;
            max-width: 100%;
			height: 100%;
            transform: translate3d(0, 0, 0);
			// overflow-y:scroll;
			.back-to-top{
			    bottom: 1.4825rem;
			}
		}
	}
}