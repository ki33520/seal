@import "../../common/common.styl"
@import "../../common/iconfont.styl"
@import "../../common/router.styl"
@import "../../common/header.styl"
@import "../../common/alert.styl"
@import "../../common/member.styl"

.memberupdate-container{
    font-size: .7rem;
    color: $gray-color;
    padding: 2rem 0 2.5rem 0;
}
.update-content{
    .userInfo{
        padding: 1rem;
        li{
            line-height: 2rem;
        }
    }
    .list{
        li{
            margin-bottom: .1rem;
            border-bottom: 1px solid #d7d7d7;
            >a{
                line-height: 2rem;
                color: #333;
                display: flex;
                width: 100%;
                height: 100%;
                background-color: #fff;
                &::before{
                    content: "";
                    display: inline-block;
                    text-align: center;
                    height: 1rem;
                    width: 1rem;
                }
                &::after{
                    flex: 1;
                    content: "\e81e";
                    font-family: "fontello";
                    color: #666;
                    display: inline-block;
                    text-align: right;
                    padding-right: .5rem;
                    box-sizing: border-box;
                    width: 1rem;
                }
            }
        }
    }
}
.basic-content{
    .form-item{
        margin: .6rem 0;
        .label-item{
            background-color: #fff;
            height: 2rem;
            display: flex;
            align-items: center;
            label{
                box-sizing: border-box;
                min-width: 2rem;
                text-align: left;
                padding-left: .6rem;
                font-size: .7rem;
            }
            input{
                border: none;
                background: none;
                margin-right: .6rem;
                margin-left: .6rem;
                font-family: "Helvetica Neue", Helvetica, 'microsoft yahei', sans-serif;
                font-size: .7rem;
                height: 1rem;
            }
            select{
                border: none;
                background: none;
                margin-right: .6rem;
                margin-left: .6rem;
                font-family: "Helvetica Neue", Helvetica, 'microsoft yahei', sans-serif;
                font-size: .7rem;
                height: 1rem;
                line-height: 1.1rem;
                color: #999;
            }
        }
        .tips{
            margin: .3rem 1rem 0 2rem;
            padding-left: .6rem;
            font-size: .5rem;
            color: #ee3763;
        }
    }
}
.formlist-content{
    .setup-form {
        margin-top: .4rem;
        display: block;
        &>li {
            background-color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: .3rem .4rem;
            margin-bottom: .5rem;
            &:last-child {
                border-bottom: 0 none;
            }
            &>.iconfont{
                flex:1;
                color:#999;
                font-size:.7rem;
            }
            input{
                border: 0 none;
                line-height: 1.3rem;
            }
            &>input,
            &>.inner{
                flex:10;
            }
            &>.inner{
            	display: flex;
            	&>input{
            		flex: 6;
            	}
            	&>a{
	            	font-size: .5rem;
	                display: block;
	                background: #f5f5f5;
	                color: #333;
	                line-height: 1.3rem;
	                padding: .3rem .5rem;
	            }
            }
        }
        
    }
    .setup-button {
        background: #F1F1F1;
        padding: .5rem 0;
        text-align: center;
        &>a {
            display: inline-block;
            padding: .3rem .5rem;
            width: 60%;
            line-height: 1.2rem;
            background: $purple-color;
            border-radius: .3rem;
            color: #FFF;
        }
    }
}