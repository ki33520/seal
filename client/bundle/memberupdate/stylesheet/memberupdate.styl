.memberupdate-container{
    height:100%;
    &>div{
        height:100%;
    }
}
.scene-group>.scene{
    background-color: #f5f5f5;
}
.update-content{
    .user-info{
        display: flex;
        .user-headpic{
            flex: 1;
            padding: .3rem .5rem;
            line-height: 0;
            img{
                width: 100%;
                border-radius: 100%;
            }
        }
        .user-info-list{
            flex: 2;
            padding: .4rem .5rem 0 0;
            li{
                line-height: .8rem;
                >label{
                    margin-right: .2rem;
                }
                >span{
                    color: $purple-color;
                }
            }
        }
    }
    .list{
        padding:.3rem 0;
        li{
            border-top: 1px solid #d7d7d7;
            background-color: #fff;
            display: flex;
            align-items: center;
            &:first-child{
                border-top:0;
            }
            >span{
                flex: 1;
                width: 50%;
                padding-left: .5rem;
                color: #333;
                display: block;
            }
            >div{
                flex: 1;
                padding: .2rem 1rem .2rem 0;
                text-align: right;
                line-height: 0;
                width: 50%;
                img{
                    border-radius:100%;
                    width: 50%;
                }
            }
            >a{
                line-height: 1.1rem;
                color: #333;
                display: flex;
                width: 100%;
                height: 100%;
                &::before{
                    content: "";
                    display: block;
                    text-align: center;
                    width: .5rem;
                }
                &::after{
                    flex: 1;
                    content: "\e603";
                    font-family: "iconfont";
                    color: #999;
                    display: block;
                    text-align: right;
                    padding-right: .3rem;
                    box-sizing: border-box;
                    width: 1rem;
                }
            }
        }
    }
}
.basic-content{
    header{
        .btn-right{
            a{
                color: $purple-color;
            }
        }
    }
    .form-item{
        margin: .3rem 0;
        .label-item{
            background-color: #fff;
            height: 1.2rem;
            line-height: 1.2rem;
            display: flex;
            align-items: center;
            label{
                box-sizing: border-box;
                min-width: 1.2rem;
                text-align: left;
                padding-left: .3rem;
                display: block;
            }
            input{
                border: none;
                background: none;
                margin-right: .3rem;
                margin-left: .3rem;
                height: .6rem;
                line-height: .6rem;
                color: #666;
                width: 6rem;
                display: block;
            }
            select{
                border: none;
                background: none;
                width: 1.4rem;
                margin-right: .1rem;
                margin-left: .1rem;
                color: #666;
                direction: rtl;
                &[name=year],
                &[name=gender]{
                    margin-left: .3rem;
                    direction: ltr;
                }
            }
        }
        .tips{
            margin: .15rem .5rem 0 1.2rem;
            padding-left: .3rem;
            padding-bottom: .2rem;
            font-size: .3rem;
            color: #ee3763;
        }
    }
}
.formlist-content{
    .setup-form {
        margin-top: .3rem;
        display: block;
        &>li {
            background-color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: .2rem .4rem;
            margin-bottom: .3rem;
            &:last-child {
                border-bottom: 0 none;
            }
            &>.iconfont{
                flex:1;
                color:#999;
            }
            input{
                border: 0 none;
                line-height: 1rem;
            }
            &>input,
            &>.inner{
                flex:10;
                display: block;
            }
            &>.inner{
            	display: flex;
                align-items: center;
            	&>input{
            		flex: 6;
                    display: block;
            	}
            	&>a{
	                display: block;
	                background: #f5f5f5;
	                color: #333;
	                line-height: 1rem;
	                padding: 0 .5rem;
	            }
            }
            &::before{
                content: "";
                display: block;
                width: .42rem;
                height: .42rem;
                margin: 0 .2rem .1rem .2rem;
                background-size: 100% 100%;
            }
            &:nth-child(1){
                &::before{
                    background-image: url(/client/asset/images/org_lockX.png);
                }
            }
            &:nth-child(2){
                &::before{
                    background-image: url(/client/asset/images/org_lockHook.png);
                }
            }
            &:nth-child(3){
                &::before{
                    background-image: url(/client/asset/images/org_lockDot.png);
                }
            }
        }
        &.formlist-content{
            color: #ff0;
        }
        
    }
    .setup-button {
        padding: .5rem 0;
        text-align: center;
        &>a {
            display: inline-block;
            padding: .3rem .5rem;
            width: 80%;
            line-height: .6rem;
            font-size: .4rem;
            background: $purple-color;
            border-radius: .3rem;
            color: #FFF;
        }
    }
    &.membercard-form{
        .setup-form >li {
            &:nth-child(1){
                &::before{
                    background-image: url(/client/asset/images/org_membership.png);
                }
            }
            &:nth-child(2){
                &::before{
                    background-image: url(/client/asset/images/org_mobile.png);
                }
            }
            &:nth-child(3){
                &::before{
                    background-image: url(/client/asset/images/ord_yanzheng.png);
                }
            }
        }
    }
}
.basic-content {
    overflow: hidden;
    .dropdown {
        position:static;
        display: block;
        width: 1.4rem;
        height: 1.2rem;
        margin-right: .1rem;
        margin-left: .1rem;
        &.year,
        &.gender{
            margin-left: .3rem;
            button {
                .dropdown-status{
                    text-align: left;
                }
            }
        }
        button {
            padding: 0;
            line-height: 1.2rem;
            height: 100%;
            overflow: hidden;
            border: 0 none;
            width: 100%;
            .dropdown-status{
                width: 100%;
                text-align: right;
                display: block;
                overflow:hidden;
                white-space:nowrap;
                text-overflow:ellipsis;
            }
            .status{
                font-size:14px;
            }
            .iconfont{
                display: none;
            }
        }
        .dropdown-content {
            bottom:0;
            visibility:hidden;
            opacity:0;
            position:absolute;
            width:100%;
            left:0;
            &.active {
                // animation: slideUp .3s ease-in-out;
                visibility:visible;
                opacity:1;
            }
            &:before,&:after{
                display:none;
            }
            .selected-items {
                padding:px2rem(10) 0;
                li {
                    color: #AAA;
                    padding:px2rem(5) px2rem(10);
                    .selected-item {
                        width: 100%;
                        text-align: center;
                    }
                    &.checked {
                        border-top: .05rem solid #DDD;
                        border-bottom: .05rem solid #DDD;
                        color: #333;
                        background: #F8F8F8;
                    }
                }
            }
        }
    }
}