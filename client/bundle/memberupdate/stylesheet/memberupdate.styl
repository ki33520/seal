@import "../../common/common";
@import "../../common/switcher";
@import "../../common/iconfont";
@import "../../common/router";
@import "../../common/header";
@import "../../component/gotop";
@import "../../component/alert";
@import "../../common/member";

.memberupdate-container{
    height:100%;
    &>div{
        height:100%;
    }
}
.switcher>.switcher-case{
    background-color: #f5f5f5;
}
.update-content{
    .userInfo{
        padding: .3rem .5rem;
        li{
            line-height: .8rem;
            >label{
                margin-right: .2rem;
            }
            >span{
                color: $purple-color;
            }
        }
    }
    .list{
        li{
            border-top: 1px solid #d7d7d7;
            >a{
                line-height: 1.1rem;
                color: #333;
                display: flex;
                width: 100%;
                height: 100%;
                background-color: #fff;
                &::before{
                    content: "";
                    display: inline-block;
                    text-align: center;
                    width: .5rem;
                }
                &::after{
                    flex: 1;
                    content: "\e603";
                    font-family: "iconfont";
                    color: #999;
                    display: inline-block;
                    text-align: right;
                    padding-right: .5rem;
                    box-sizing: border-box;
                    width: 1rem;
                }
            }
        }
    }
}
.basic-content{
    header{
        .btn-right{
            a{
                color: $purple-color;
            }
        }
    }
    .form-item{
        margin: .3rem 0;
        .label-item{
            background-color: #fff;
            height: 1.2rem;
            line-height: 1.2rem;
            display: flex;
            align-items: center;
            label{
                box-sizing: border-box;
                min-width: 1.2rem;
                text-align: left;
                padding-left: .3rem;
            }
            input{
                border: none;
                background: none;
                margin-right: .3rem;
                margin-left: .3rem;
                height: .6rem;
                line-height: .6rem;
                color: #666;
                width: 6rem;
            }
            select{
                border: none;
                background: none;
                width: 1.4rem;
                margin-right: .1rem;
                margin-left: .1rem;
                color: #666;
                direction: rtl;
                &[name=year],
                &[name=gender]{
                    margin-left: .3rem;
                    direction: ltr;
                }
            }
        }
        .tips{
            margin: .15rem .5rem 0 1.2rem;
            padding-left: .3rem;
            font-size: .3rem;
            color: #ee3763;
        }
    }
}
.formlist-content{
    .setup-form {
        margin-top: .3rem;
        display: block;
        &>li {
            background-color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: .2rem .4rem;
            margin-bottom: .3rem;
            &:last-child {
                border-bottom: 0 none;
            }
            &>.iconfont{
                flex:1;
                color:#999;
            }
            input{
                border: 0 none;
                line-height: 1rem;
            }
            &>input,
            &>.inner{
                flex:10;
            }
            &>.inner{
            	display: flex;
                align-items: center;
            	&>input{
            		flex: 6;
            	}
            	&>a{
	                display: block;
	                background: #f5f5f5;
	                color: #333;
	                line-height: 1rem;
	                padding: 0 .5rem;
	            }
            }
            &::before{
                content: "";
                width: .42rem;
                height: .42rem;
                margin: 0 .2rem .1rem .2rem;
                background-size: 100% 100%;
            }
            &:nth-child(1){
                &::before{
                    background-image: url(/client/asset/images/org_lockX.png);
                }
            }
            &:nth-child(2){
                &::before{
                    background-image: url(/client/asset/images/org_lockHook.png);
                }
            }
            &:nth-child(3){
                &::before{
                    background-image: url(/client/asset/images/org_lockDot.png);
                }
            }
        }
        &.formlist-content{
            color: #ff0;
        }
        
    }
    .setup-button {
        background: #F1F1F1;
        padding: .5rem 0;
        text-align: center;
        &>a {
            display: inline-block;
            padding: .3rem .5rem;
            width: 80%;
            line-height: .6rem;
            font-size: .4rem;
            background: $purple-color;
            border-radius: .3rem;
            color: #FFF;
        }
    }
    &.membercard-form{
        .setup-form >li {
            &:nth-child(1){
                &::before{
                    background-image: url(/client/asset/images/org_membership.png);
                }
            }
            &:nth-child(2){
                &::before{
                    background-image: url(/client/asset/images/org_mobile.png);
                }
            }
            &:nth-child(3){
                &::before{
                    background-image: url(/client/asset/images/ord_yanzheng.png);
                }
            }
        }
    }
}