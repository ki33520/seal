@import "../../common/common.styl"
@import "../../common/iconfont.styl"
@import "../../common/header.styl"
@import "../../common/router.styl"

body {
    background: #FFF;
}

.header {
    span{
        right:.4rem;
    }
    span>a{
        width:auto;
        color:#999;
    }
}

.coupon-detail-content {
    font-size: .7rem;
    .coupon-detail-body {
        padding: 1.5rem 1.6rem 1rem 1.6rem;
        height:100%;
        box-sizing:border-box;

        &>p{
            line-height:1.2rem;
            margin:.4rem 0;
            &>label{
                display:inline-block;
                color:#999;
            }
            &>span{
                display:inline-block;
                padding-left:.5rem;
            }
        }

        .coupon-detail-button{
            display:flex;
            padding:.4rem 0;
            &>span{
                flex:1;
                text-align:center;
                &>a{
                    display:inline-block;
                    padding:.15rem .25rem;
                    border:.05rem solid $pink-color;
                    color:$pink-color;
                    border-radius:.15rem;

                    &.disabled{
                        border-color:#999;
                        color:#999;
                    }
                }
            }
        }
    }
    .coupon-qrcode {
        background: url(/client/asset/image/detail-arrow.png) no-repeat 0 100%;
        background-size: 100%;
        padding:0 0 1.5rem 0;
        &>img {
            width: 100%;
        }
    }
}

.rule {
    padding:.5rem .6rem;
    p {
        margin: .25rem 0 .6rem 0;
        font-size: .7rem;
    }
}
