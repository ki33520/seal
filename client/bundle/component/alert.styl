@import "../common/common";
@import "../common/util";

.alert-layer {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 999;
    display: flex;
    align-items: center;
    justify-content: center;
    visibility: hidden;
    .alert {
        padding:px2rem(10) px2rem(20);
        color: #F1F1F1;
        background: rgba(0, 0, 0, .75);
        box-sizing: border-box;
        border-radius:px2rem(5);
        opacity: 0;
        visibility: hidden;
        z-index:1000;
        transform: translateY(0) scale(0.85);
        transition: opacity .3s linear, transform .3s linear;
    }
    &.active {
        visibility: visible;
        .alert {
            visibility: visible;
            opacity: .85;
            transform: translateY(px2rem(5)) scale(1);
        }
    }
}
