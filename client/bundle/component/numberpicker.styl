@import "./constant";

$borderRadius = (.2/$scale)rem;

.number-picker {
    display:flex;
    justify-content:center;
    align-items:center;
    &>div {
        font-size: (.7/$scale)rem;
        padding: 0 (.5/$scale)rem;
        border: (.05/$scale)rem solid #AAA;
        cursor: pointer;
        line-height: (1.5/$scale)rem;
        height: (1.5/$scale)rem;
        display: inline-block;
        box-sizing:content-box;
        &:first-child {
            border-top-left-radius: $borderRadius;
            border-bottom-left-radius: $borderRadius;
        }
        &:last-child {
            border-top-right-radius: $borderRadius;
            border-bottom-right-radius: $borderRadius;
        }
    }
    &>input {
        border-color: #999;
        border-style: solid;
        border-width: (.05/$scale)rem 0;
        width: (2.5/$scale)rem;
        line-height: (1.5/$scale)rem;
        height: (1.5/$scale)rem;
        padding: 0;
        text-align: center;
        border-radius: 0;
        box-sizing:border-box;
    }
}
