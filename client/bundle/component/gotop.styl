@import "../common/common";
@import "../common/util";
.back-to-top {
    // position: fixed;
    bottom: rem4px(40);
    right: rem4px(10);
    // background: rgba(0, 0, 0, .75);
    width: rem4px(40);
    height:rem4px(40);
    border-radius: rem4px(40);
    z-index: 100;
    text-align: center;
    opacity:0;
    display: none;
    transition:opacity .3s ease-in;
    &.active{
        display: block;
        opacity:1;
        transition:opacity .3s ease-in;
    }
    a {
        width:100%;
        height:100%;
        display:flex;
        justify-content:center;
        align-items:center;
        background: url(/client/asset/images/toTop.png) center center;
        span {
            display: none;
            font-size:rem4px(18);
            color: #FFF;
        }
    }
}

.back-to-top-container{
    height:100%;
    overflow:hidden;
    .back-to-top{
        position:absolute;
    }
    .back-to-top-inner{
        overflow-x:hidden;
        overflow-y:auto;
        height:100%;
        -webkit-overflow-scrolling:touch;
    }
}
