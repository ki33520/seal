@import "./constant";

.back-to-top {
    position: fixed;
    bottom: (2/$scale)rem;
    right: (.5/$scale)rem;
    background: rgba(0, 0, 0, .75);
    width: (2/$scale)rem;
    height:(2/$scale)rem;
    border-radius: (2/$scale)rem;
    z-index: 100;
    text-align: center;
    opacity:0;
    transition:opacity .3s ease-in;
    &.active{
        opacity:1;
        transition:opacity .3s ease-in;
    }
    a {
        width:100%;
        height:100%;
        display:flex;
        justify-content:center;
        align-items:center;
        span {
            font-size: (.9/$scale)rem;
            color: #FFF;
        }
    }
}
