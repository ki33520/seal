@import "./constant";
$pink-color = #e30083;

.slider {
    height: 100%;
    width: 100%;
    position: relative;
    overflow-x:hidden;
    line-height:0;
    .control-nav {
        position: absolute;
        height: (.5/$scale)rem;
        bottom: (.5/$scale)rem;
        left: 0;
        right: 0;
        z-index: 12;
        text-align: center;
        padding: 0;
        font-size: 0;
        &>span {
            display: inline-block;
            width: (.5/$scale)rem;
            height: (.5/$scale)rem;
            background: #333;
            opacity: .5;
            border-radius: 100%;
            margin: 0 (.25/$scale)rem;
            &.active {
                background: $pink-color;
            }
        }
    }
    .direction-nav {
        &>div {
            position: absolute;
            top: 0;
            bottom: 0;
            width: 15%;
            z-index: 100;
            font-size: 0;
            background: #FFF;
            opacity: 0.3;
            display: flex;
            justify-content: center;
            &>span {
                width: (1/$scale)rem;
                height: (1/$scale)rem;
                display: block;
                align-self: center;
                font-size: (1.2/$scale)rem;
            }
        }
        .direction-nav-prev {
            left: 0;
        }
        .direction-nav-next {
            right: 0;
        }
    }
}

.slides {
    overflow: hidden;
    width: 100%;
    position: relative;
    line-height:0;
    &>.slide {
        display:table-cell;
        width: 100%;
        font-size:0;
        line-height: 0;
        &.active {
            opacity: 1;
        }
        a {
            line-height: 0;
            display: inline-block;
        }
        img {
            width: 100%;
        }
    }
}

.slider-fade {
    .slides {
        &>.slide {
            display: none;
            &.active {
                display: table-cell;
                opacity: 1;
            }
        }
    }
}

@keyframes slide-fade {
    0% {
        display: none;
    }
    30% {
        display: table-cell;
        opacity: 0.75;
    }
    50% {
        display: table-cell;
        opacity: 0.85;
    }
    100% {
        display: table-cell;
        opacity: 1;
    }
}
