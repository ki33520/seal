@import "./mixin";
@import "./constant";

.dropdown {
    position: relative;
    display: inline-block;
    font-size: (.7/$scale)rem;
    width:100%;
    button {
        outline: 0 none;
        background: #FFF;
        padding: (.4/$scale)rem (.5/$scale)rem;
        border: (.05/$scale)rem solid #E5E5E5;
        border-radius: (.2/$scale)rem;
        line-height: (1/$scale)rem;
        clear: both;
        overflow: hidden;
        width:100%;
        .iconfont {
            float: right;
            font-size: (.65/$scale)rem;
            padding-left: (.25/$scale)rem;
            box-sizing: border-box;
            width: 20%;
            color:#888;
        }
        .dropdown-status {
            float: left;
            width:80%;
            text-align:left;
        }
    }
    &.active button {
        border-radius: (.2/$scale)rem (.2/$scale)rem 0 0;
        border: (0.05/$scale)rem solid #CCC;
    }
    &>.dropdown-content {
        position: absolute;
        z-index: 12;
        background: #FFF;
        width: 100%;
        box-sizing: border-box;
        border-radius: 0 0 (.2/$scale)rem (.2/$scale)rem;
        display: none;
        opacity: 0;
        padding: 0 0 (.4/$scale)rem 0;
        text-align: left;
        &.active {
            border: (0.05/$scale) solid #CCC;
            border-top: 0 none;
            margin-top: -(0.05/$scale)rem;
            display: block;
            overflow:hidden;
            opacity: 1;
            animation: slide-to-top .1s ease-in-out;
        }
    }
}

.dropdown-headless{
    position: relative;
    display: inline-block;
    font-size: (.7/$scale)rem;
    width:100%;
    &>.dropdown-content{
        position:static;
        opacity:1;
        display: block;
        padding: 0 0 (.4/$scale)rem 0;
        text-align: left;
        width: 100%;
        &.active{
            margin-top:0;
            border:0 none;
        }
    }
    .fixed-caret{
        width:(1/$scale)rem;
        height:(1/$scale)rem;
        right:0;
        top:0;
        position:absolute;
        .iconfont {
            font-size: (.65/$scale)rem;
            padding-left: (.25/$scale)rem;
            box-sizing: border-box;
            color:#888;
        }
    }
}

@keyframes slide-to-top {
    0% {
        opacity: 0.3;
    }
    30% {
        opacity: 0.6;
    }
    75% {
        opacity: 0.8;
    }
    100% {
        opacity: 1;
    }
}
