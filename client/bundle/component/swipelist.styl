@import "../common/common";
@import "../common/util";
@import "./slidetabs";

.swipe-list{
    height: 100%;
    overflow: hidden;
    >a.icon-back{
        position: absolute;
        height: 1.17rem;
        width: 1.17rem;
        line-height: 1.17rem;
        padding-top: 0.28rem;
        text-align: center;
        left: 0;
        top: 0;
        font-size: .58rem;
        color: #a7a7a7;
        background-color: #fff;
        z-index: 999;
        &::before{
            content: "";
            width: 0.586667rem;
            height: 0.6rem;
            display: block;
            background: url("/client/asset/images/backArrow.png") no-repeat;
            background-size: 100%;
            margin: 0 auto;
        }
    }
    .swiper-container{
        width: 10rem;
        height: 100%;
        .swiper-pagination,
        .swiper-pagination-1{
            display: none;
        }
        .swiper-wrapper{
            transform: translate3d(0px,0,0);
            height: 100%;
            .swiper-slide{
                height: 100%;
                .slide-header{
                    width: 100%;
                    font-size: .42rem;
                    line-height: 1.17rem;
                    height: 1.17rem;
                    position: relative;
                    text-align: center;
                }
                &.swiper-slide-active{
                    .slide-header{
                        display: block;
                    }
                }
                .img-wrap{
                    background-color: #1a1a1a;
                    height: 100%;
                    padding-bottom: 1.17rem;
                    align-items: center;
                    justify-content: center;
                    display: flex;
                    img{
                        max-width: 100%;
                        max-height: 100%;
                    }
                }
            }
        }
    }
}