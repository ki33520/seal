@import "../../common/common.styl";
@import "../../common/iconfont.styl";
@import "../../common/header.styl";
@import "../../component/refresher.styl";
@import "../../component/gotop.styl";
@import "../../common/error.styl";

.container {
    height: 100%;
}
.specialActivity {
    .banner{
        img {
            width:100%;
        }
    }
    .specialActivity_list{
        height:auto;
        width:100%;
        padding-bottom:.32rem;
        
        &>div {
            display:block;
            width:50%;
            float:left;
            border-right:1px solid #d7d7d7;
            border-bottom:1px solid #d7d7d7;
            padding:1px .32rem .24rem .32rem;
            position:relative;
            .flash-price {
                position:absolute;
                left:.4rem;
                top:.3rem;
                width:.78rem;
                height:.78rem;
                background:url(/client/asset/images/jpsg.png) no-repeat;
                background-size:100%;
            }
            .mobile-price{
                position:absolute;
                left:.4rem;
                top:.3rem;
                width:.78rem;
                height:.78rem;
                background:url(/client/asset/images/indexTitle_1.png) no-repeat;
                background-size:95% 95%;
            }
            .sale-out {
                width: 1.813rem;
                height: 1.813rem;
                background-image: url(/client/asset/images/ico_soldOut.png);
                background-size: 100%;
                position: absolute;
                left:1.54rem;
                top: 1.54rem;
            }
            img{
                width:4.2rem;
                height:4.2rem;
            }
        }
        .country {
            display: block;
            margin: .4rem 0 .12rem;
            line-height: .54rem;
            color:#333;
            font-size:.24rem;
            i {
                width: .46rem;
                height: .46rem;
                display: inline-block;
                margin-right: .2rem;
                vertical-align: top;
            }
            img {
                width: 100%;
                height: 100%;
                display: block;
            }
        }
        p{
            color:#333;
            margin:0 0 .2rem;
            line-height:.5rem;
            height:1rem;
            display:block;
            overflow:hidden;
        }
        .now-price {
            float: left;
            color: #ed1946;
            font-size: .6rem;
            line-height: .6rem;
            display: block;
        }
        .old-price {
            text-decoration: line-through;
            float: right;
            color: #999;
            display: inline-block;
            line-height: .6rem;
        }
    }
}