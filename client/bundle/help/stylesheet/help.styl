@import "../../common/common";
@import "../../common/scene";
@import "../../common/iconfont";
@import "../../common/router";
@import "../../common/header";
@import "../../component/alert";
@import "../../common/member";

.help-container{
	height:100%;
    &>div{
        height:100%;
    }
	.scene-group>.scene{
		background-color: #f5f5f5;
	}
}
.switcher>.switcher-case{
    background-color: #f5f5f5;
}
.help-content{
	header{
		.btn-right{
			a{
				color: $purple-color;
			}
		}
	}
	color: $gray-color;
	h2{
		font-size: .3rem;
		line-height: .4rem;
		padding: .3rem .4rem .15rem .4rem;
	}
	.list{
		margin-bottom: .5rem;
		>li{
			font-size: .35rem;
			border-bottom: 1px solid #d7d7d7;
			>a{
				line-height: 1.2rem;
				display: flex;
				width: 100%;
				height: 100%;
				background-color: #fff;
				&::before{
					content: "";
					width: .4rem;
				}
				&::after{
					flex: 1;
					content: "\e603";
					font-family: "iconfont";
					color: #999;
					text-align: right;
					padding-right: .5rem;
					box-sizing: border-box;
					width: 1rem;
				}
				.tips{
					color: #999;
					font-size: .3rem;
					margin-left: .1rem;
				}
				.left-col{
					flex: 6;
					.iconfont{
						font-size: .4rem;
						&::before{
							margin-right: .1rem;
						}
					}
				}
				.right-col{
					flex: 3;
					padding-top: .2rem;
					text-align: center;
					span{
						font-size: .3rem;
						line-height: .45rem;
						display: block;
						color: #8435c2;
					}
				}
			}
		}
	}
	.form-item{
		margin: .3rem 0;
		.feedback{
			position: relative;
			textarea{
				width: 100%;
				border: none;
				border-top: 1px solid #d7d7d7;
				border-bottom: 1px solid #d7d7d7;
				padding: .25rem .5rem;
				font-size: .35rem;
				line-height: .5rem;
				min-height: 4.5rem;
			}
			a{
				width:2.13rem;
				height:2.13rem;
				background-color:#eee;
				border:1px solid #d7d7d7;
				display:block;
				position:absolute;
				right:.32rem;
				bottom:.32rem;
				border-radius:5px;
				i{
					width:.8rem;
					height:.68rem;
					display:block;
					margin:.725rem auto;
					background:url(/client/asset/images/photoIcon.png) no-repeat;
					background-size:100%;
				}
			}
		}
		
	}
	.help-text{
		padding: .3rem .36rem .3rem .5rem;
		>h3{
			color: #801fa1;
			font-size: .38rem;
			line-height: 150%;
			margin: .1rem 0;
		}
		>p{
			color: #222;
			font-size: .37rem;
			line-height: 150%;
			margin-bottom: .3rem;
		}
	}
}
