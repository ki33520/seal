.help-container{
	height:100%;
    &>div{
        height:100%;
    }
    .scene-group>.scene,
    .scene-group .scene-group-inner>.scene{
        background-color: #f7f7f7;
    }
}
.help-content{
	header{
		.btn-right{
			a{
				color: $purple-color;
			}
		}
	}
	color: $gray-color;
	h2{
		font-size: .3rem;
		line-height: .4rem;
		padding: .3rem .4rem .15rem .4rem;
	}
	.list{
		margin-bottom: .5rem;
		>li{
			font-size: .35rem;
			border-bottom: 1px solid #d7d7d7;
			>a{
				line-height: 1.2rem;
				display: flex;
				width: 100%;
				height: 100%;
				background-color: #fff;
				&::before{
					content: "";
					display: block;
					width: .4rem;
				}
				&::after{
					flex: 1;
					display: block;
					content: "\e603";
					font-family: "iconfont";
					color: #999;
					text-align: right;
					padding-right: .5rem;
					box-sizing: border-box;
					width: 1rem;
				}
				>span:first-child{
					margin-right: .1rem;
				}
				.tips{
					color: #999;
					font-size: .3rem;
					margin-left: .1rem;
				}
				.left-col{
					flex: 6;
					.iconfont{
						font-size: .4rem;
						&::before{
							margin-right: .1rem;
						}
					}
				}
				.right-col{
					flex: 3;
					padding-top: .2rem;
					text-align: center;
					span{
						font-size: .3rem;
						line-height: .45rem;
						display: block;
						color: #8635c2;
					}
				}
			}
		}
	}
	.form-item{
		margin: .3rem 0;
		.feedback{
			position: relative;
			textarea{
				width: 100%;
				border: none;
				border-top: 1px solid #d7d7d7;
				border-bottom: 1px solid #d7d7d7;
				padding: .25rem .5rem;
				font-size: .35rem;
				line-height: .5rem;
				min-height: 4.5rem;
			}
			a{
				width:2.13rem;
				height:2.13rem;
				background-color:#eee;
				border:1px solid #d7d7d7;
				display:block;
				position:absolute;
				right:.32rem;
				bottom:.32rem;
				border-radius:5px;
				i{
					width:.8rem;
					height:.68rem;
					display:block;
					margin:.725rem auto;
					background:url(/client/asset/images/photoIcon.png) no-repeat;
					background-size:100%;
				}
			}
		}
		
	}
}
.question-content{
	height: 100%;
	overflow: hidden;
	.question-list-wrap{
		overflow-x: hidden;
		overflow-y: auto;
		height: 100%;
		padding-bottom: 1.17rem;
	}
	.question-list{
		padding: .3rem .36rem;
		background-color: #fff;
		margin-top: .25rem;
		.question-item{
			padding-bottom: .3rem;
			>h3{
				color: #8635c2;
				font-size: .38rem;
				font-weight: normal;
				line-height: 150%;
				margin-bottom: .1rem;
				>span:first-child{
					margin-right: .05rem;
				}
			}
			>p{
				color: #222;
				font-size: .37rem;
				line-height: 150%;
				margin-bottom: .25rem;
			}
		}
	}
}

.customer-list{
	margin-top:rem4px(8);
	&>li:first-child{
	}
	&>li.category-visble{
		border:0 none;
		&>a:after{
			content:"\E611"
		}
	}
}
.help-content .customer-categories{
	border-top:1px solid #D7D7D7;
	margin:0;
	&>li{
		padding-left:rem4px(16);
		&>a{
			line-height:1rem;
			background:#F8F8F8;
		}
	}	
}