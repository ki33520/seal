@import "../../common/common.styl"
@import "../../common/iconfont.styl"
@import "../../common/router.styl"
@import "../../common/header.styl"
@import "../../component/alert.styl"
@import "../../common/member.styl"

.help-content{
	font-size: .7rem;
	color: $gray-color;
	padding: 2rem 0 2.5rem 0;
	.list{
		li{
			margin-bottom: .1rem;
			>a{
				line-height: 2rem;
				display: flex;
				width: 100%;
				height: 100%;
				background-color: #fff;
				&::before{
					content: "";
					background-image: url(/client/asset/image/userinfo_list_icon.png);
					background-position: center 0;
					background-size: 100%;
					background-repeat: no-repeat;
					display: inline-block;
					margin: 0.5rem .5rem 0;
					text-align: center;
					height: 1rem;
					width: 1rem;
				}
				&::after{
					flex: 1;
					content: "\e603";
					font-family: "iconfont";
					color: #666;
					display: inline-block;
					text-align: right;
					padding-right: .5rem;
					box-sizing: border-box;
					width: 1rem;
				}
				.left-col{
					flex: 7;
				}
				.right-col{
					flex: 2;
					padding-top: .3rem;
					text-align: center;
					span{
						font-size: .5rem;
						line-height: .7rem;
						display: block;
						color: #8435c2;
					}
				}
			}
			&:nth-child(4){
				margin-bottom: .5rem;
			}
		}
	}
}
