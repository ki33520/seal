.scene-group{
    position:absolute;
    height:100%;
    width:100%;
}

.index-container{
    // height:100%;
    // overflow:hidden;
    #index{
        height:100%;
        // overflow:hidden;
        position:absolute;
        width:100%;
        .index-content{
            height:100%;
            overflow:hidden;
            header{
                position:absolute;
                height:rem4px(43);
                .logo img{
                    width:rem4px(79);
                    margin-top:rem4px(13);
                }
                .indexSearch{
                    width:rem4px(43);
                    height:rem4px(43);
                    &:before{
                        width:rem4px(23);
                        height:rem4px(23);
                        margin:rem4px(12) rem4px(12) 0 0;
                    }
                }
            }
            .tabs{
                position:absolute;
                top:rem4px(43);
                width:100%;
                overflow:hidden;
                bottom:rem4px(50);
                .tabs-nav{
                    position:absolute;
                    height:rem4px(44);
                    // width:120vw;
                    display:flex;
                    &>span{
                        width:rem4px(85);
                        flex:1
                        cursor:pointer;
                        outline:0 none;
                        display:block;
                        line-height:rem4px(44);
                        text-align:center;
                        b{
                            font-weight:400;
                        }
                        &.active>b{
                            border-bottom:1px solid #801da1;
                            color:#801da1;
                            padding-bottom:rem4px(3.75);
                        }
                    }
                    
                }
                .tabs-content{
                    position:absolute;
                    top:rem4px(44);
                    bottom:0;
                    width:100%;
                    overflow:hidden;
                    .tabs-item{
                        display:none;
                        // background:green;
                        &.active{
                            display:block;
                            width:100%;
                            height:100%;
                            overflow-x:hidden;
                            overflow-y:auto;
                            transform:translate3D(0,0,0);
                        }
                    }
                }           
            }
            nav.bottomNav{
                // height:rem4px(50);
                position:fixed;
                transform:translate3D(0,0,1px);
                background-color:#fff;
                bottom:0;
                width:100%;
            }
        }
    }
}

.slide-tabs {
    position:absolute;
    top:rem4px(43);
    bottom:rem4px(50);
    height:auto;
    display:block;
    overflow:hidden;
    width:100%;
    .slide-tabs-navbar{
        border:0 none;
        background:#FFF;
        position:absolute;
        overflow:hidden;
        top:0;
        .slide-tabs-navbar-item{
            line-height:rem4px(38);
            border:0 none;
            width:rem4px(72);
            &>span{
                padding-bottom:rem4px(3);
                b{
                    font-weight:400;
                }
            }
            &.active>span{
                color:#801da1;
                border-bottom:rem4px(1) solid #801da1;
            }
        }
    }
    .slide-tabs-content{
        position:absolute;
        top:rem4px(38);
        bottom:0;
        .slide-tabs-item{
            // display:none;
            position:relative;
            &.active{
                // display:block;
            }
        }
    }
}

.floor-content{
    width:100%;
    // position:absolute;
    .m-entry{
        padding:rem4px(16.5) 0;
        span:before{
            display:none;
        }
        span>img{
            width:rem4px(40);
            height:rem4px(40);
            margin:0 auto;
            margin-bottom:rem4px(11);
        }
    }
}

