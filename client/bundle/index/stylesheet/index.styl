.flashBuy > a .right{
    width:rem4px(195);
}

.flashBuy .right .timer i{
    margin:0;
    width:auto;
    height:auto;
    vertical-align:baseline;
}

.flashBuy .right span.name{
    mutiple-text-overflow()
