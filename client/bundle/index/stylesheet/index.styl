@import "../../common/common";
@import "../../common/iconfont";
@import "../../common/router";
@import "../../common/scene";
@import "../../common/search";
@import "../../common/footer";
@import "../../common/loading";
@import "../../component/slidetabs";
@import "../../component/slider";
@import "../../component/image";
@import "./index.css";

html,body{
    height: 100%;
}
body{
    overflow:hidden;
}
.index-container{
    height:100%;
    overflow:hidden;
    #index{
        height:100%;
        overflow:hidden;
        &>div{
            height:100%;
            overflow:hidden;
        }
    }
}
.floor-content{
    width:100%;
    // position:absolute;
    .m-entry{
        padding:.44rem 0;
        span:before{
            display:none;
        }
        span>img{
            width:px2rem(40);
            height:px2rem(40);
            margin:0 auto;
            margin-bottom:px2rem(11);
        }
    }
}

.index-content{
    // position:relative;
    height:100%;
    overflow:hidden;
}
.slide-tabs {
    // position:absolute;
    // width:100%;
    .slide-tabs-navbar{
        border:0 none;
        background:#FFF;
        .slide-tabs-navbar-item{
            line-height:px2rem(38);
            border:0 none;
            width:px2rem(72);
            &>span{
                padding-bottom:px2rem(3);
                b{
                    font-weight:400;
                }
            }
            &.active>span{
                color:#801da1;
                border-bottom:px2rem(1) solid #801da1;
            }
        }
    }
    .slide-tabs-content{
        padding-bottom:px2rem(81);
        .slide-tabs-item{
            position:relative;
        }
    }
}

.indexSingle{
    padding:.266rem 0 0;
    margin:0 .32rem;
    &>a{
        position:relative;
        .sale-out {
            width: px2rem(100);
            height: px2rem(100);
            background: url(/client/asset/images/ico_soldOut.png) no-repeat 50% 50%;
            background-size: 66%;
            position: absolute;
            left:px2rem(105);
            top:px2rem(110);
        }
        .put-off {
            width: px2rem(100);
            height: px2rem(100);
            background-image:url(/client/asset/images/cover_not_sell.png);
            background-size: 100%;
            position: absolute;
            left:px2rem(105);
            top:px2rem(110);
        }
    }
}

.activityGeneral{
    &>a{
        position:relative;
        .sale-out {
            width: px2rem(100);
            height: px2rem(100);
            background: url(/client/asset/images/ico_soldOut.png) no-repeat 50% 50%;
            background-size: 66%;
            position: absolute;
            left:px2rem(15);
            top:px2rem(35);
        }
        .put-off {
            width: px2rem(100);
            height: px2rem(100);
            background-image:url(/client/asset/images/cover_not_sell.png);
            background-size: 100%;
            position: absolute;
            left:px2rem(15);
            top:px2rem(35);
        }
    }
}

.flashBuy{
    &>a{
        position:relative;
        .sale-out {
            width: px2rem(100);
            height: px2rem(100);
            background: url(/client/asset/images/ico_soldOut.png) no-repeat 50% 50%;
            background-size: 66%;
            position: absolute;
            left:px2rem(15);
            top:px2rem(35);
        }
        .put-off {
            width: px2rem(100);
            height: px2rem(100);
            background-image:url(/client/asset/images/cover_not_sell.png);
            background-size: 100%;
            position: absolute;
            left:px2rem(15);
            top:px2rem(35);
        }
    }

}

.slider .control-nav{
    position: absolute;
    width: 100%;
    bottom: .5rem;
    left: 50%;
    margin-left: -50%;
    z-index: 10;
    text-align: center;
    &>span{
        width: 8px;
        height: 8px;
        background: url(/client/asset/images/bannerDot2.png) 0 0 no-repeat;
        background-size: 100%;
        opacity:1;    
        &.active{
            background: url(/client/asset/images/bannerDot2.png) 0 -8px no-repeat;
            background-size: 100%;    
        }
    }
}

.flashBuy > a .right{
    width:5.2rem;
}

.flashBuy .right .timer i{
    margin:0;
    width:auto;
    height:auto;
    vertical-align:baseline;
}

.flashBuy .right span.name{
    mutiple-text-overflow()
    white-space:normal
}

.activityGeneral .right span.name{
    mutiple-text-overflow()
    white-space:normal
}

.indexSingle a{
    border-bottom:1px solid #d7d7d7;
    &:last-child{
        border-bottom:0 none;
    }
    p{
        mutiple-text-overflow()
        white-space:normal
        -webkit-line-clamp: 3;
    }
} 
