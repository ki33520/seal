@import "../../common/common";
@import "../../common/iconfont";
@import "../../common/header";
@import "../../component/slidetabs";
@import "./catePoly.css";

.polymer-list{
    &>.slide-tabs{
        .slide-tabs-navbar{
            background:#FFF;
            border-bottom:1px solid #d7d7d7;
            .slide-tabs-navbar-item{
                line-height:px2rem(37);
                border-left:0 none;
                &.active{
                    i{
                        color:#801da1;
                        border-color:#801da1;
                    }
                }
            }
        }
    }
}

.category-list{
    &>.slide-tabs{
        background:#F7F7F7;
        .slide-tabs-navbar{
            background:#F7F7F7;
            width:25%;
            border-bottom:0 none;
            .slide-tabs-navbar-item{
                border-right:0 none;
                &.active{
                    border-left:px2rem(5) solid #801da1;
                    animation:shake 0.5s;
                }
            }
        }
        .slide-tabs-content{
            background:#FFF;
        }
    }
    
    .rightCon{
        float:none;
        width:100%;
        padding:px2rem(10);
        box-sizing:border-box;
        &>div{
            display:block;
        }
    }
}