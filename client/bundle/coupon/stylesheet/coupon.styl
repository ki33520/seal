.container {
	height: 100%;
	&>div{
		height:100%;
		overflow:hidden;
	}
}
.scene-group>.scene {
	background-color: #f3f3f3;
}
.slide-tabs {
	background-color: #f3f3f3;
	.slide-tabs-navbar {
		height: 1.16rem;
		width: 100%;
		background-color:white;
	    border-bottom: 1px solid #d7d7d7;
	    .slide-tabs-navbar-item {
			line-height: 1.16rem;
			border: none;
			&.active {
				background-color: transparent;
				border-bottom:.053333rem solid #801da1;
				color: #801da1;
			}
		}
	}
	.slide-tabs-content{
		overflow:hidden;
        padding-bottom:px2rem(30);
	}
}

.inner-scroll {
	height: 100%;
	overflow: hidden;
}
.coupon {
    height: 120px;
    margin-bottom: 15px;
    box-shadow: 3px 3px 3px #ebebeb;
    margin: .32rem;
    position: relative;
    background-size: 100% 100%;
    overflow: hidden;
}

.tepin,.haitao,.hnmall,.general,.shop,.youa-invalid {
	.left {
	    padding: 30px 6px 30px 16px;
	    float: left;
	    width: 32%;
	    .price {
		    font-size: .8rem;
		    letter-spacing: -2px;
		    font-weight: bold;
		    text-align: center;
		    &>em{
		    	font-size: .64rem;
			    padding-right: .12rem;
			    font-weight: normal;
		    }
		}
		.term {
		    color: #666;
		    font-size: .32rem;
		    text-align: center;
		}
	}
	.right {
	    padding: 28px 0 0px 0;
	    float: right;
	    width: 56%;
	    margin-right: 3%;
	    .kind {
	    	font-size: .32rem;
	    }
	    .date {
		    color: #666;
		    font-size: .266667rem;
		    padding: .12rem 0;
		}

		.explain {
		    color: #999;
		    background: url(/client/asset/images/rightLine.png) left top no-repeat;
		    background-size: 80% 3px;
		    padding: .12rem 0;
		    overflow: hidden;
		    height: .5rem;
		    line-height: .5rem;
		    width: 100%;
		    font-size: .266667rem;
		}
	}
}

.tepin {
	background-image: url(/client/asset/images/youa_pink.png);
	.price {
	    color: #e30182;
	}

	.kind {
	    color: #e30182;
	    padding: .12rem 0;
	}
}

