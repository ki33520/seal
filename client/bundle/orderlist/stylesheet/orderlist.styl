@import "../../common/common";
@import "../../common/header";

$gray-color = #555
body {
    background: #F1F1F1;
}

.text-overflow{
    overflow:hidden;
    white-space:nowrap;
    text-overflow:ellipsis;
}

.order-list-content {
    font-size: .7rem;
    .order-list {
        .order-list-item{
                margin-top: .5rem;
                background: #FFF;
            .item-title{
                color:#AAA;
                padding:.25rem .4rem;
                border-bottom:.05rem solid #EEE;
                b{
                    font-weight:400;
                    padding:0 0 0 .25rem;
                    color:#333;
                }
            }        
            .item-content {
                display: flex;
                padding: 0 .4rem .5rem .4rem;
                .item-thumbnail {
                    flex: 3.6;
                    padding:.15rem .25rem;
                }
                .item-detail {
                    flex: 9;
                    p {
                        margin: 0;
                        line-height: 1.1rem;
                        color: #AAA;
                        font-size: .65rem;
                        padding:.15rem;
                        b {
                            color: #333;
                            padding: 0 .15rem;
                            font-weight: 400;
                        }
                    }
                }
                .item-caret{
                    flex:1;
                    align-self:center;
                }
            }
        }
    }
}
