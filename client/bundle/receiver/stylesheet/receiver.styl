@import "../../common/common";
@import "../../common/iconfont";
@import "../../common/header";
@import "../../common/switcher";
@import "./receiver.css";
@import "../../component/selected";
body {
    background: #F1F1F1;
}

.receiver-container{
    height:100%;
    &>div{
        height:100%;
    }
}

.receiver-panel {
    background: #FFF;
    margin-bottom:px2rem(8);
}

.receiver-form-content {
    .receiver-form {
        .receiver-form-fieldset {
            @extend .receiver-panel;
            &:last-child .receiver-form-row:first-child{
                border:0 none;
            }
            .receiver-form-row {
                display: flex;
                align-items: flex-start;
                justify-content:center;
                padding: px2rem(8) 0;
                border-top:px2rem(1) solid #D7D7D7;
                margin:0 px2rem(10) 0 px2rem(5);
                line-height: px2rem(24);
                &>i{
                    width:px2rem(6);
                    color:#dd1847;
                }
                .receiver-form-label {
                    width:px2rem(65);
                }
                .receiver-form-field {
                    flex: 1;
                    &>input[type="text"]{
                        border: 0 none;
                        margin: 0;
                        padding:0;
                        line-height: px2rem(24);
                        width:100%;
                        outline:none;
                    }
                }
                &.receiver-form-textarea-row {
                    .receiver-form-field {
                        flex: 3.5;
                        textarea {
                            width: 100%;
                            border: 0 none;
                            margin: 0;
                            padding:0;
                            outline:none;
                            min-height:px2rem(60);
                            line-height:px2rem(24);
                        }
                    }
                }
            }
        }
    }
}

.receiver-form-field {
    line-height: 0;
    .dropdown {
        position:static;
        button {
            padding: .1rem 0.5rem;
            border: 0 none;
            width: 60%;
        }
        .dropdown-content {
            bottom:-100%;
            left:0;
            right:0;
            position:fixed;
            box-shadow: 0 px2rem(2) px2rem(4) px2rem(4) rgba(34, 36, 38, .12),
             0 px2rem(2) px2rem(4) 0 rgba(34, 36, 38, .08);
            transition: all .2s ease-in-out;
            padding:px2rem(12) 0;
            &.active {
                overflow:visible;
                transition: all .2s ease-in-out;
                opacity: 1;
                bottom: 0;
            }
            &:before,&:after{
                display:none;
            }
            .selected-items {
                li {
                    color: #AAA;
                    .selected-item {
                        text-align: center;
                    }
                    &.checked {
                        border-top: .05rem solid #DDD;
                        border-bottom: .05rem solid #DDD;
                        color: #333;
                        background: #F8F8F8;
                    }
                }
            }
        }
    }
}