@import "../../common/common.styl"
@import "../../common/iconfont.styl"
@import "../../common/header.styl"
@import "../../common/member.styl"

body{
	background-color: #f1f1f1;
}
.header {
	position:fixed;
	top:0;
	left:0;
	right:0;
	z-index:200;
	box-sizing:border-box;
	background: url(/client/asset/image/headerBg.png) 0 bottom no-repeat;
	background-size: 100%;
}
.comment-content{
	font-size: .7rem;
	color: $gray-color;
	padding: 2rem 0 2.5rem 0;
	.comment-list{
		>li{
			padding: .6rem .5rem;
			margin-bottom: .6rem;
			background-color: #fff;
			.product{
				display: flex;
				padding: 0 .2rem .5rem .2rem;
				margin-bottom: .5rem;
				border-bottom: 1px solid #d7d7d7;
				.col{
				}
				.col-left{
					margin-right: .6rem;
					img{
						width: 3.2rem;
						height: 3.2rem;
						display: block;
						border: 1px solid #e0e0e0;
					}
				}
				.col-right{
					flex: 1;
					position: relative;
					.title{
						font-size: .65rem;
						line-height: .9rem;
						height: 1.8rem;
						color: #555;
					}
					.origin{
						display: flex;
						font-size: .6rem;
						line-height: 1rem;
						color: #777;
						margin-bottom: .3rem;
						img{
							width: 1rem;
							height: 1rem;
							margin-right: .2rem;
						}
					}
				}
			}
			.stars-culm{
				display: flex;
				margin-bottom: .5rem;
				padding: 0 .2rem;
				font-size: .5rem;
				.stars{
					flex: 5;
					text-align: left;
				}
				.date{
					flex: 5;
					color: #999;
					text-align: right;
				}
			}
			.content{
				padding: 0 .2rem;
			}
		}
	}
	.back-to-top {
		position: fixed;
		bottom: 2rem;
		right: .5rem;
		background: rgba(0, 0, 0, .75);
		width: 2rem;
		height:2rem;
		border-radius: 2rem;
		z-index: 100;
		text-align: center;
		opacity:0;
		transition:opacity .3s ease-in;
		&.active{
			opacity:1;
			transition:opacity .3s ease-in;
		}
		a {
			width:100%;
			height:100%;
			display:flex;
			justify-content:center;
			align-items:center;
			span {
				font-size: .9rem;
				color: #FFF;
			}
		}
	}

}
.tabs {
    .tabs-nav {
        background: #FFF;
        display: flex;
        justify-content: center;
        align-items: center;
        &>span {
            flex: 1;
            display: block;
            text-align: center;
            line-height: 1.75rem;
            border-left: .05rem solid #DEDEDE;
            border-bottom: .1rem solid #DEDEDE;
            &.active {
                border-bottom: .1rem solid #811da1;
                color: #811da1;
            }
        }
    }
    .tabs-content {
        position: relative;
        .tabs-item {
            position: absolute;
            z-index: 100;
            width: 100%;
            transform: translateX(-100%);
            opacity: 0;
            visibility: hidden;
            &.active {
                opacity: 1;
                transform: translateX(0);
                visibility: visible;
            }
            &.active ~ * {
                transform: translateX(100%);
            }
        }
        &.tabs-content-fade {
            .tabs-item {
                transition: opacity .2s linear 0s;
            }
        }
        &.tabs-content-slide {
            .tabs-item {
                transition: transform .2s linear 0s;
            }
        }
    }
}
