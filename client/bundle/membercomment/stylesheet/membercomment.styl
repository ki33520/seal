body{
	background-color: #f1f1f1;
}
.membercomment-container{
	height:100%;
	overflow:hidden;
	#member-comment{
		height:100%;
		overflow:hidden;
		&>div{
			height:100%;
			overflow:hidden;
		}
	}
}
.comment-content{
	color: $gray-color;
	padding: 0 0 0 0;
	.tab-content{
		height: 100%;
		overflow: hidden;
	}
	.empty-result{
		background:url(/client/asset/images/empty_goodsComment.png) no-repeat center top;
		background-size:80%;
		width: 100%;
		margin-top: 2rem;
		padding-top: 5.5rem;
		text-align: center;
		h3{
			color: #666;
			font-weight: normal;
			font-size: .4rem;
			line-height: 150%;
			margin-bottom: .3rem;
		}
		.btn-link{
			width: 4rem;
			height: 1rem;
			line-height: 1rem;
			text-align: center;
			display: inline-block;
			color: #811da1;
			border: px2rem(1) solid #811da1;
			border-radius: .5rem;
		}
	}
	.slide-tabs {
		// position:absolute;
		// width:100%;
		.slide-tabs-navbar{
			border:0 none;
			background:#FFF;
			width: 100%;
			.slide-tabs-navbar-item{
				background:#FFF;
				border:0 none;
				border-bottom:px2rem(1) solid #D7D7D7;
				line-height:px2rem(36);
				&.active{
					color:#801da1;
					border-color:#801da1;
					border-bottom:px2rem(2) solid #801da1;
				}
				&>span{
					padding-bottom:px2rem(3);
				}
			}
		}
		.slide-tabs-content{
			overflow:hidden;
			padding-bottom:px2rem(38);
		}
		
	}
	.comment-list{
		>li{
			padding: .3rem .25rem;
			margin-bottom: .3rem;
			background-color: #fff;
			.product{
				display: flex;
				padding: 0 0 .25rem 0;
				margin: 0 .1rem .25rem;
				border-bottom: px2rem(1) solid #f1f1f1;
				font-size: .35rem;
				.col{
				}
				.col-left{
					margin-right: .5rem;
					line-height: 0;
					img{
						width: 1.78rem;
						height: 1.78rem;
						display: block;
						border: px2rem(1) solid #f1f1f1;
					}
				}
				.col-right{
					flex: 1;
					position: relative;
					.title{
						line-height: .45rem;
						min-height: 1.35rem;
						margin-bottom: .1rem;
						color: #555;
						font-size: .34rem;
					}
					.price{
						font-size: .34rem;
						i{
							font-size: .28rem;
						}
					}
					.origin{
						display: flex;
						font-size: .3rem;
						line-height: .55rem;
						color: #777;
						margin-bottom: .15rem;
						img{
							width: .5rem;
							height: .5rem;
							margin-right: .1rem;
						}
					}
				}
			}
			.stars-culm{
				display: flex;
				margin: 0 .2rem .25rem;
				line-height: .5rem;
				.stars{
					flex: 4;
					display: flex;
					text-align: left;
					color: #ffdd00;
					.iconfont{
						flex: 1;
						font-size: .43rem;
					}
				}
				.date{
					flex: 5;
					font-size: .2rem;
					color: #999;
					text-align: right;
				}
			}
			.content{
				margin: 0 .2rem;
				overflow: hidden;
			}
			.pic-list{
				display: flex;
				padding: .3rem 0 0 0;
				overflow: hidden;
				.slide-tabs{
					.slide-tabs-navbar{
						width: auto;
						height: 3.2rem;
						border:0 none;
						.slide-tabs-navbar-item{
							background:#FFF;
							border:0 none;
							line-height: 0;
							width: 3.2rem;
							&.active{
								border-bottom: none;
							}
							&>div{
								width: 2.88rem;
								height: 2.88rem;
								padding: 0.055rem;
								border: px2rem(1) solid #d7d7d7;
								margin: 0 auto;
								float: none;
								display: block;
								&>img{
									width: 100%;
								}
							}
						}
					}
					.slide-tabs-content{
						display: none;
					}
				}
			}
		}
	}
}

