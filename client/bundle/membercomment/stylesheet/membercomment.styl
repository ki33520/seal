body{
	background-color: #f1f1f1;
}
.comment-content{
	color: $gray-color;
	padding: 0 0 2.5rem 0;
	.comment-list{
		>li{
			padding: .3rem .25rem;
			margin-bottom: .3rem;
			background-color: #fff;
			.product{
				display: flex;
				padding: 0 .1rem .25rem .1rem;
				margin-bottom: .25rem;
				border-bottom: 1px solid #d7d7d7;
				font-size: .35rem;
				.col{
				}
				.col-left{
					margin-right: .6rem;
					line-height: 0;
					img{
						width: 1.78rem;
						height: 1.78rem;
						display: block;
						border: 1px solid #e0e0e0;
					}
				}
				.col-right{
					flex: 1;
					position: relative;
					.title{
						line-height: .55rem;
						height: 1.1rem;
						color: #555;
					}
					.origin{
						display: flex;
						font-size: .3rem;
						line-height: .55rem;
						color: #777;
						margin-bottom: .15rem;
						img{
							width: .5rem;
							height: .5rem;
							margin-right: .1rem;
						}
					}
				}
			}
			.stars-culm{
				display: flex;
				margin-bottom: .25rem;
				padding: 0 .2rem;
				line-height: .5rem;
				.stars{
					flex: 4;
					display: flex;
					text-align: left;
					color: #ffdd00;
					.iconfont{
						flex: 1;
						font-size: .43rem;
					}
				}
				.date{
					flex: 5;
					font-size: .2rem;
					color: #999;
					text-align: right;
				}
			}
			.content{
				padding: 0 .2rem;
			}
			.pic-list{
				display: flex;
				padding: .3rem .1rem 0 .1rem;
				>li{
					width: 25%;
					line-height: 0;
					>img{
						width: 2rem;
						height: 2rem;
						box-sizing: content-box;
						border: 1px solid #e0e0e0;
					}
				}
				&.hide{
					display: none;
				}
			}
		}
	}
	.back-to-top {
		position: fixed;
		bottom: 2rem;
		right: .5rem;
		background: rgba(0, 0, 0, .75);
		width: 2rem;
		height:2rem;
		border-radius: 2rem;
		z-index: 100;
		text-align: center;
		opacity:0;
		transition:opacity .3s ease-in;
		&.active{
			opacity:1;
			transition:opacity .3s ease-in;
		}
		a {
			width:100%;
			height:100%;
			display:flex;
			justify-content:center;
			align-items:center;
			span {
				font-size: .9rem;
				color: #FFF;
			}
		}
	}

}
.tabs {
	.polyTabs {
		ul{
			display: flex;
			background: #FFF;
			justify-content: center;
			align-items: center;
			li {
				flex: 1;
				display: block;
				text-align: center;
				line-height: 1.16rem;
				border-bottom: 1px solid #DEDEDE;
				padding-bottom: 2px;
				&.active {
					border-bottom: 3px solid #811da1;
					padding-bottom: 0;
					color: #811da1;
				}
			}
		}
	}
	.tabs-content {
		position: relative;
		width: 100%;
		overflow: hidden;
		.tabs-item {
			flex: 1;
			z-index: 100;
			width: 100%;
			transform: translateX(-100%);
			transition: transform height 2s;
			opacity: 0;
			height: 0;
			visibility: hidden;
			&.active {
				opacity: 1;
				height: auto;
				transform: translateX(0);
				visibility: visible;
			}
			&.active ~ * {
				transform: translateX(100%);
			}
		}
		&.tabs-content-fade {
			.tabs-item {
				transition: opacity .2s linear 0s;
			}
		}
		&.tabs-content-slide {
			.tabs-item {
				transition: transform .2s linear 0s;
			}
		}
	}
}
