.polyCon{
    width: 100%;
    overflow-x: hidden;
}
.polyCon #page-content{
}
.polyCon #page-content > div{
    position:absolute;
    width:100%;
    padding-bottom:1.38rem;
}
 
.polyTabs {
    height: 1.16rem;
    border-bottom: 1px solid #d7d7d7;
    background-color:#fff;
    position:relative;
    z-index:2;
}
.polyTabs ul {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    width: 100%;
    height: 1.16rem;
}
.polyTabs ul li {
    -webkit-appearance: none;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    display: block;
    line-height: 1.16rem;
    text-align: center;
}
.polyTabs ul li.current {
}
.polyTabs ul li.current i{
    color: #801da1;
    border-bottom: 1px solid #801da1;
}

.activityGeneral{
    padding:.266rem .32rem 0;
    border-bottom:.2666rem solid #f7f7f7;
}

.activityGeneral .title{
    line-height:1rem;
    padding-bottom:.1rem;
}
.activityGeneral .title span i{
    width:.3rem;
    height:.3rem;
    display:inline-block;
    background-color:#d9b766;
    margin:0 .2rem;
}
.activityGeneral .title a{
    float:right;
    line-height:1rem;
}
.activityGeneral .title a i{
    width:.4rem;
    height:.4rem;
    display:inline-block;
    margin:0 0 0 .1rem;
    vertical-align:top;
    padding-top:.29rem;
}
.activityGeneral .title a img{
    width:.4rem;
    height:.4rem;
    display:block;
    vertical-align:top;
}
.activityGeneral > a{
    width:100%;
    position:relative;
    display:block;
    margin-bottom:.266rem;
}
.activityGeneral > a > img{
    width:100%;
}
.activityGeneral > a .right{    
    width:4.8rem;
    position:absolute;
    z-index:0;
    right:.24rem;
    top:1.2rem;
}
.activityGeneral .right span.name{
    font-size:.32rem;
    height:1rem;
    line-height:.5rem;
    overflow:hidden;
    display:block;
}
.activityGeneral .right span.country{
    display:block;
    margin:.4rem 0 .6rem;
    line-height:.54rem;
}
.activityGeneral .right span i{
    width: .46rem;
    height: .46rem;
    display: inline-block;
    margin-right: .2rem;
    vertical-align: top;
}
.activityGeneral .right span img{
    width:100%;
    height:100%;
    display:block;
}
.activityGeneral .right .now-price{
    float:left;
    color:#ed1946;
    font-size:.6rem;
    line-height:.6rem;
    display:block;
}
.activityGeneral .right .old-price{
    text-decoration: line-through;
    float:right;
    color:#999;
    display:inline-block;
    line-height:.6rem;
}
.activityGeneral .sale-out{
    width:1.813rem;
    height:1.813rem;
    background-image:url(/client/asset/images/ico_soldOut.png);
    background-size:100%;
    position:absolute;
    left:1rem;
    top:2rem;
}
