@import "../../common/common.styl"
@import "../../common/iconfont.styl"
@import "../../common/header.styl"
@import "../../component/dropdown.styl"
@import "../../component/popover.styl"
@import "../../component/numberpicker.styl"
@import "../../component/slidetabs.styl"
@import "../../component/slider.styl"
@import "../../component/popup.styl"
@import "./goods.css"

.gooddetail-container{
    height:100%;
    #good-detail{
        height:100%;
        .good-detail-content{
            height:100%;
            
        }
    }
}
.popup-bottom{
    opacity:1;
    position:fixed;
    height:auto;
    bottom:-100%;
}

.slider .control-nav{
    position: absolute;
    width: 100%;
    bottom: .5rem;
    left: 50%;
    margin-left: -50%;
    z-index: 10;
    text-align: center;
    &>span{
        width: 8px;
        height: 8px;
        background: url(/client/asset/images/bannerDot2.png) 0 0 no-repeat;
        background-size: 100%;
        opacity:1;    
        &.active{
            background: url(/client/asset/images/bannerDot2.png) 0 -8px no-repeat;
            background-size: 100%;    
        }
    }
}

.clearfix:after {
    content: " ";
    display: block;
    visibility: hidden;
    height: 0;
    clear: both;
}
.left{
    float:left;
}
.right{
    float:right;
}

px2rem($px){
    return $px/32 * 1rem;
}

$pink-color = #ED1946;

.promotionLabel {
    background: $pink-color;
    border-radius: px2rem(3);
    margin: 0 px2rem(5) px2rem(3) 0;
    padding: 0 px2rem(5);
    color: #FFF;
    display: inline-block;
    font-size: px2rem(12);
}
.promotion dt{
    line-height:px2rem(22);
}

.good-promotions {
    padding: 0 px2rem(8) 0;
    .fixed-caret {
        width: px2rem(22);
        height: px2rem(22);
        &>.iconfont {
            line-height:px2rem(22);
            display: inline-block;
            font-size: px2rem(14);
        }
    }
    .dropdown-content {
        // padding:0;
        &>div {
            line-height: px2rem(22);
        }
        &>.promotions {
            display: none;
            p{
                font-size:px2rem(12);
                line-height:inherit;
            }
            .promotion-title {
                @extends .promotionLabel;
            }
            .promotion-desc {
                font-size: px2rem(13);
            }
        }
        &>.promotions-brief {
            display: block;
            &>span {
                @extends .promotionLabel;
            }
        }
        &.active {
            &>.promotions {
                display: block;
            }
            &>.promotions-brief {
                display: none;
            }
        }
    }
}

.con{
    position:static;
    height:auto;
    padding:0 0 px2rem(8) 0;
    &>a{
        color:#FFF;
    }
    .goodsSure{
        display:flex;
        justify-content:spacing-between;
        align-items:flex-start;
        &>img{
            float:none;
        }
        &>div.left{
            float:none;
            flex:1;
        }
        &>i{
            width:px2rem(22);
            color:#999;
        }
    }
    .select{
        padding:0 px2rem(10);
    }

    .divider-title {
        padding:px2rem(4) px2rem(10) px2rem(4);
        &>span {
            display: block;
            background: #FFF;
            line-height:px2rem(20);
            padding-right:px2rem(5);
        }
    }

    .good-buyed{
        float:right;
        input{
            max-width:px2rem(32);
            min-width:px2rem(22);
            line-height:px2rem(24);
        }
        .number-picker>div{
            line-height:px2rem(24);
            height:px2rem(24);
            width:px2rem(26);
            padding:0;
        }
    }
}
.goodsBtns{
    z-index:100;
}
.goodsBtns a.goods_cart{
    text-align:center;
}
.goodsBtns a.goods_cart .iconfont{
    font-size:.65rem;
}

.slide-tabs .slide-tabs-navbar{
    background:#FFF;
    border-bottom:0 none;
    .slide-tabs-navbar-item{
        line-height:1.15rem;
        border-left:0 none;
        border-bottom:px2rem(1) solid #D7D7D7;
        
        &.active{
            border-bottom:px2rem(2) solid #801da1;
            color:#801da1;
        }
    }
}
.faq img{
    width:100%;
}

.good-detail-content{
    .good-detail-upper{
        display:none;
        // visibility:hidden
        &.visible{
            // visibility:visible;
            display:block;
            padding-bottom:1.12rem;
        }
    }
    .good-detail-down{
        // display:none;
        visibility:hidden;
        top:0;
        height:0;
        overflow:hidden;
        &.visible{
            visibility:visible;
            height:auto;
            // display:block;
        }
        &>.pull-trigger{
            margin:0 0 .5rem 0;
        }
        .specification-content{
            padding:.5rem 0;
        }
        .specification-row{
            margin-bottom:.3rem;
            font-size:.7rem;
            line-height:1rem;
            padding:0 .4rem;
            .specification-name{
                color:#999;
                display:inline-block;
            }
            .specification-value{
                display:inline-block;
                padding:0 0 0 .25rem;
            }
        }
    }
}

