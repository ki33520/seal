@import "../../common/common.styl"
@import "../../common/iconfont.styl"
@import "../../common/header.styl"
@import "../../common/member.styl"

.header{
	background: none;
	border-bottom: none;
	h1{
		color: #fff;
	}
	>.icon-left-open{
		display: none;
	}
	position: static;
}
.membercenter-container{
	min-height: 100%;
}
.member-center-content{
	font-size: .7rem;
	color: $gray-color;
	padding: 0 0 2.5rem 0;
	.bgWrap{
	    background: url(/client/asset/image/userBg.jpg) no-repeat;
	    background-size: 100% 100%;
	    height: 10.7rem;
	    position: relative;
	}
	.member-info{
		.userInfo{
			display: flex;
			align-items: center;
			height: 5rem;
			.headpic{
				flex: 2;
				.img_wrap{
					border: 1px solid #fff;
					border-radius: 50%;
					width: 4rem;
					height: 4rem;
					margin: 0 auto;
					font-weight: normal;
				}
			}
			.mobile{
				flex: 3;
				color: #fff;
			}
			.QRcode{
				flex: 1;
			}
		}
		.list{
			li{
				margin-bottom: .1rem;
				>a{
					line-height: 2rem;
					display: flex;
					width: 100%;
					height: 100%;
					background-color: #fff;
					&::before{
						content: "";
						background-image: url(/client/asset/image/userinfo_list_icon.png);
						background-position: center 0;
						background-size: 100%;
						background-repeat: no-repeat;
						display: inline-block;
						margin: 0.5rem .5rem 0;
						text-align: center;
						height: 1rem;
						width: 1rem;
					}
					&::after{
						flex: 1;
						content: "\e603";
    					font-family: "fontello";
    					color: #666;
						display: inline-block;
						text-align: right;
						padding-right: .5rem;
						box-sizing: border-box;
						width: 1rem;
					}
				}
				&:nth-child(1){
					margin-bottom: .5rem;
				}
				&:nth-child(2){
					>a:before{
						background-position: center -1rem;
					}
				}
				&:nth-child(3){
					>a:before{
						background-position: center -2rem;
					}
				}
				&:nth-child(4){
					>a:before{
						background-position: center -3rem;
					}
				}
				&:nth-child(5){
					>a:before{
						background-position: center -4rem;
					}
				}
				&:nth-child(6){
					margin-bottom: .5rem;
					>a:before{
						background-position: center -5rem;
					}
				}
				&:nth-child(7){
					margin-bottom: .5rem;
					>a:before{
						background-position: center -6rem;
					}
				}
				&:nth-child(8){
					>a:before{
						background-position: center -7rem;
					}
				}
			}
		}
		.orderNav {
			display: flex;
			align-items: center;
			background-color: rgba(36, 1, 35, 0.3);
			position: absolute;
			left: 0;
			bottom: 0;
			width: 100%;
			padding-top: .1rem;
			height: 3rem;
			text-align: center;
			.navItem{
				flex: 1;
				a{
					color: #fff;
					font-size: .5rem;
					line-height: 1.2rem;
					max-width: 2.5rem;
					display: block;
					margin: 0 auto;
					&:before {
						content:"";
						display: block;
						background-image: url(/client/asset/image/order_icon.png);
						background-repeat: no-repeat;
						background-position: center top;
						width: 1.25rem;
						height: 1.25rem;
						background-size: 100%;
						margin: 0 auto;
					}
				}
			}
			.navItem:nth-child(2) a:before{
				background-position: center -1.25rem;
			}
			.navItem:nth-child(3) a:before{
				background-position: center -2.5rem;
			}
			.navItem:nth-child(4) a:before{
				background-position: center -3.75rem;
			}
		}
	}
	
}
