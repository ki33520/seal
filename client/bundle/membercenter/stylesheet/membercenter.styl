@import "../../common/common.styl"
@import "../../common/iconfont.styl"
@import "../../common/header.styl"
@import "../../common/member.styl"
@import "../../component/popup.styl"


.user{
	header{
		width:100%;
		height:5.7rem;
		background:url(/client/asset/images/userBg.jpg);
		border-bottom: none;
		background-size:100%;
		position:relative;
		text-align: center;
		>.icon-left-open{
			display: none;
		}
		h1{
			color: #fff;
		}
		.top{
			position:relative;
			padding-top:.7rem;
			span{
				font-size:.453333rem;
				color:#fff;
			}
			a{
				position:absolute;
				right:.32rem;
				top:.64rem;
			}
			i.iconfont{
				color:#fff;
				font-size:.48rem;
			}
		}
		&.login{
			.userInfo{
				display: block;
			}
			.userBtns{
				display: none;
			}
		}
		.userBtns{
			text-align:center;
			margin-top:.88rem;
			a{
				width:2.133333rem;
				height:.906667rem;
				line-height:.906667rem;
				border:1px solid #fff;
				color:#fff;
				display:inline-block;
				border-radius:20px;
				margin:0 .6rem;
			}
		}
		.userInfo{
			margin:.6rem 1.1rem 0;
			height:1.8rem;
			line-height:1.8rem;
			position:relative;
			text-align:center;
			span{
				color:#ffffff;
				text-align:center;
				height:1.8rem;
				line-height:1.8rem;
				a{
					color: #fff;
				}
			}
			.userInfo_con{
				position:absolute;
				top:0;
				left:0;
				width:100%;
				line-height: 0;
				>img{
					width:1.8rem;
					height:1.8rem;
					border-radius:100%;
					border:.05rem solid #fff;
					position:absolute;
					left:0;
					top:0;
				}
				a.user-qr{
					width:.7rem;
					height:.7rem;
					position:absolute;
					background-color: rgba(0,0,0,.3);
					border-radius: 0.12rem;
					right:0;
					top:.6rem;
					line-height: 0;
					color: #fff;
					font-size: .55rem;
					line-height: .7rem;
				}
			}
		}
		.userGoods{
			position:absolute;
			bottom:0;
			left:0;
			width:100%;
			height:1.4rem;
			background-color:rgba(0,0,0,.3);
			display: -webkit-box;
			display: -webkit-flex;
			display: flex;
			padding:0 .5rem;
			a{
				display: block;
				-webkit-box-flex: 1;
				-webkit-flex: 1;
				flex: 1;
				text-align: center;
				color:#fff;
				position:relative;
				span{
					font-size:.27rem;
				}
				em{
					display:block;
					width:.666667rem;
					height:.666667rem;
					margin:.16rem auto .07rem;
				}
				i{
					display:block;
					background-color:#e0073c;
					font-size:.24rem;
					position:absolute;
					left:1.4rem;
					top:.06rem;
					border-radius:50%;
					padding:.04rem .12rem;
				}
				&.userGoods_1 em{
					background:url(/client/asset/images/userGoods_1.png) no-repeat;
					background-size:100%;
				}
				&.userGoods_2 em{
					background:url(/client/asset/images/userGoods_2.png) no-repeat;
					background-size:100%;
				}
				&.userGoods_3 em{
					background:url(/client/asset/images/userGoods_3.png) no-repeat;
					background-size:100%;
				}
				&.userGoods_4 em{
					background:url(/client/asset/images/userGoods_4.png) no-repeat;
					background-size:100%;
				}
			}
		}
	}
	.helpList {
    	padding:.266667rem 0 0;
    	&::last-child{
			padding-bottom:.266667rem;
		}
	}
	.helpList dl {
	    background-color: #fff;
	    padding: .3rem .28rem;
	    border-bottom: 1px solid #d7d7d7;
		height:1.16rem;
		line-height:.56rem;
	}
	.helpList a:last-child dl{
		border:0;
	}
	.helpList dl dt {
	    float: left;
	    width: 92%;
	}
	.helpList dl dt img{
		width:.56rem;
		height:.56rem;
		display:inline;
		margin-right:.12rem;
		vertical-align: bottom;
	}
	.helpList dl dt em.dot{
		width:.16rem;
		height:.16rem;
		display:block;
		background-color:#e0063d;
		float:right;
		border-radius:50%;
		position:relative;
		top:.18rem;

	}
	.helpList dl dd {
	    width: .5rem;
	    float: right;
	}
	.pop-qr{
		position: absolute;
		border-radius: .2rem;
		background-color: #fff;
		z-index: 999;
		top: 50%;
		left: 50%;
		width: 8rem;
		height: 11rem;
		margin-left: -4rem;
		margin-top: -5.5rem;
		display: none;
		text-align: center;
		&.active{
			display: block;
		}
		& > .btn-close{
			position: absolute;
			border-radius: 50%;
			background-color: #fff;
			line-height: 1rem;
			font-size: .5rem;
			width: 1rem;
			height: 1rem;
			right: -0.3rem;
			top: -0.3rem;
		}
		& > .top{
			font-size: .55rem;
			line-height: .8rem;
			padding-top: .6rem;
			height: 1.4rem;
		}
		& > .center{
			line-height: 0;
			& > img{
				width: 100%;
			}
		}
		& > .bottom{
			font-size: .48rem;
			line-height: 1.4rem;
			height: 1.4rem;
		}
	}
}