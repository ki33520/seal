@import "../../common/common.styl"
@import "../../common/iconfont.styl"
@import "../../common/header.styl"
@import "../../common/member.styl"

.collect-content{
	color: $gray-color;
	.collect-list{
		background-color: #fff;
		>li{
			padding: .3rem 0;
			margin: 0 .35rem;
			border-bottom: 1px solid #d7d7d7;
			display: flex;
			&:last-child{
				border-bottom: none;
			}
			.col{
			}
			.col-left{
				margin-top: .05rem;
				margin-right: .6rem;
				line-height: 0;
				img{
					width: 2.72rem;
					height: 2.72rem;
					border: 1px solid #e0e0e0;
				}
			}
			.col-right{
				flex: 1;
				position: relative;
				.title{
					line-height: .6rem;
					height: 1.2rem;
					margin-bottom: .15rem;
					color: #555;
				}
				.origin{
					display: flex;
					font-size: .3rem;
					line-height: .55rem;
					color: #777;
					img{
						width: .5rem;
						height: .5rem;
						margin-right: .1rem;
					}
				}
				.price{
					display: flex;
					align-items: baseline;
					position: absolute;
					bottom: 0;
					left: 0;
					width: 100%;
					span{
						flex: 1;
						display: block;
						color: #ed1844;
						font-size: .45rem;
						font-weight: normal;
						&:last-child{
							color: #aaa;
							font-size: .3rem;
							text-align: right;
							text-decoration: line-through;
						}
					}
				}
			}
		}
	}
}
