@import "../../common/common.styl";
@import "../../common/iconfont.styl";
@import "../../common/header.styl";
@import "../../common/member.styl";
@import "../../component/refresher.styl";
@import "../../component/masklayer.styl";
@import "../../component/gotop.styl";

.collect-content{
	color: $gray-color;
	.collect-list{
		background-color: #fff;
		>li{
			padding: .3rem 0;
			margin: 0 .35rem;
			border-bottom: 1px solid #d7d7d7;
			&:last-child{
				border-bottom: none;
			}
			>a{
				display: flex;
			}
			.col{
			}
			.col-left{
				margin-top: .05rem;
				margin-right: .3rem;
				line-height: 0;
				img{
					width: 2.72rem;
					height: 2.72rem;
					border: 1px solid #e0e0e0;
				}
			}
			.col-right{
				flex: 1;
				position: relative;
				.title{
					line-height: .6rem;
					height: 1.2rem;
					margin-bottom: .15rem;
					color: #555;
				}
				.origin{
					display: flex;
					font-size: .3rem;
					line-height: .55rem;
					color: #777;
					img{
						width: .5rem;
						height: .5rem;
						margin-right: .1rem;
					}
				}
				.price{
					display: flex;
					font-family: Helvetica, sans-serif;
					align-items: baseline;
					position: absolute;
					bottom: 0;
					left: 0;
					width: 100%;
					>span{
						flex: 1;
						display: block;
						color: #ed1844;
						font-size: .5rem;
						font-weight: normal;
						i{
							font-style: none;
							font-size: .4rem;
							font-weight: normal;
						}
						&:last-child{
							color: #aaa;
							font-size: .3rem;
							text-align: right;
							text-decoration: line-through;
							i{
								font-size: .3rem;
							}
						}
					}
				}
			}
		}
	}
	.back-to-top {
		position: fixed;
		bottom: 2rem;
		right: .5rem;
		background: rgba(0, 0, 0, .75);
		width: 2rem;
		height:2rem;
		border-radius: 2rem;
		z-index: 100;
		text-align: center;
		opacity:0;
		transition:opacity .3s ease-in;
		&.active{
			opacity:1;
			transition:opacity .3s ease-in;
		}
		a {
			width:100%;
			height:100%;
			display:flex;
			justify-content:center;
			align-items:center;
			span {
				font-size: .9rem;
				color: #FFF;
			}
		}
	}
}
.refresher{
    display:none;
    font-size:.4rem;
    text-align:center;
    padding:.12rem 0;
    &.refresher-active{
        display:block;
        animation:refresher-moveUp .5s ease-in-out;
    }
    &>span{
        margin-right:.25rem;
    }
}
@keyframes refresher-moveUp{
    from{ transform:translateY(-1rem); opacity:0; }
    to{ transform:translateY(0); opacity:1; }
}
