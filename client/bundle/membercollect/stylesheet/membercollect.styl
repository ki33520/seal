.collect-content{
	color: $gray-color;
	.empty-result{
		background:url(/client/asset/images/empty_collection.png) no-repeat center top;
		background-size:80%;
		width: 100%;
		margin-top: 2rem;
		padding-top: 5.5rem;
		text-align: center;
		h3{
			color: #666;
			font-weight: normal;
			font-size: .4rem;
			line-height: 150%;
			margin-bottom: .3rem;
		}
		.btn-link{
			width: 4rem;
			height: 1rem;
			line-height: 1rem;
			text-align: center;
			display: inline-block;
			color: #811da1;
			border: 1px solid #811da1;
			border-radius: .5rem;
		}
	}
	.collect-list{
		background-color: #fff;
		>li{
			padding: .3rem 0;
			margin: 0 .35rem;
			border-bottom: 1px solid #d7d7d7;
			&:last-child{
				border-bottom: none;
			}
			.col{
				display: flex;
			}
			.col-left{
				margin-top: .05rem;
				margin-right: .3rem;
				line-height: 0;
				img{
					width: 2.72rem;
					height: 2.72rem;
					border: 1px solid #e0e0e0;
				}
			}
			.col-right{
				flex: 1;
				position: relative;
				.title{
					line-height: .6rem;
					height: 1.2rem;
					margin-bottom: .15rem;
					color: #555;
				}
				.origin{
					display: flex;
					font-size: .3rem;
					line-height: .55rem;
					color: #777;
					img{
						width: .5rem;
						height: .5rem;
						margin-right: .1rem;
					}
				}
				.price{
					display: flex;
					font-family: Helvetica, sans-serif;
					align-items: baseline;
					position: absolute;
					bottom: 0;
					left: 0;
					width: 100%;
					>span{
						flex: 1;
						display: block;
						font-weight: normal;
						i{
							fonte: none;
							font-size: .4rem;
							font-weight: normal;
						}
						&.price-sales{
							color: #ed1844;
							font-size: .5rem;
							text-align: left;
						}
						&.price-origin{
							color: #aaa;
							font-size: .3rem;
							text-align: left;
							text-decoration: line-through;
							i{
								font-size: .3rem;
							}
						}
						&.delete{
							text-align: right;
							font-size: .5rem;
							color: #999;
							a{
								color: #999;
								font-size: .5rem;
							}
						}
					}
				}
			}
		}
	}
}
