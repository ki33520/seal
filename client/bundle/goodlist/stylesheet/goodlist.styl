body {
	background-color:#f7f7f7;
}

.container,.list-container {
	height: 100%;
	overflow-y: auto;
    overflow-x: hidden;
}
 
.header {
	font-size: .38rem;
	display:flex;
	justify-content:flex-start;
	align-items:center;
	.iconfont{
		display:block;
		position:static;
	}
	.filter-btn{
		display:block;
		position:static;
	}
	.search-box {
		display:block;
		flex:1;
		// left:1.6rem;
		top:auto;
		position:relative;
		input {
		    border: none;
		    box-sizing: border-box;
		}
		&>span {
		    top: .35rem;
		}
	}
	span.title{
		flex:1;
		padding:0;
	}
}
.empty header{
	span.title{
		padding-right:rem4px(44);
		text-align:center;
	}
}

.search-foucs span{
	background:url(/client/asset/images/searchIcon.png) 0 -25px no-repeat;
	background-size:100%;
}

.search-order {
	display: -webkit-box;
    display: -webkit-flex;
    display: flex;
	width:100%;
	border-bottom:1px solid #d7d7d7;
	height:1.2rem;

	a {
		-webkit-appearance: none;
		-webkit-box-flex: 1;
		-webkit-flex: 1;
		flex: 1;
		text-align:center;
		line-height:1.2rem;
		display: block;
		&.active,
		&.price-desc {
			color:#801da1;
			border-bottom:1px solid #801da1;
		}
		&.normal i {
			background:url(/client/asset/images/searchList_icon.png) 0 0 no-repeat;
			background-size:cover;
			width:16px;
			height:16px;
			display:inline-block;
			vertical-align:middle;
			margin-right:.12rem;
		}
		&.sales i {
			background:url(/client/asset/images/searchList_icon.png) 0 -174px no-repeat;
			background-size:100%;
			width:16px;
			height:16px;
			display:inline-block;
			vertical-align:middle;
			margin-right:.12rem;
		}
		&.price i {
			background:url(/client/asset/images/searchList_icon.png) 0 -70px no-repeat;
			background-size:cover;
			width:16px;
			height:16px;
			display:inline-block;
			vertical-align:middle;
			margin-right:.12rem;
		}
		&.price.price-desc i {
			background-position:0 -140px;
		}
		&.normal.active i {
			background-position:0 -35px;
		}
		
		&.price.active i {
			background-position:0 -105px;
		}
		&.sales.active i {
			background-position:0 -209px;
		}
		
	}
 
}
.good-list-container{
	background-color: white;
}
.special-activity-list {
	height:auto;
	width:100%;
	margin-top:.2rem;
	a {
		display:block;
		width:50%;
		float:left;
		padding-top:1px;
		> div {
			border-bottom:1px solid #d7d7d7;
			padding:0 .32rem .24rem .32rem;
			position:relative;
			.sale-out {
			    position: absolute;
			    left:1.54rem;
			    top: 1.54rem;
			    z-index:3;
			    width: 1.813rem;
			    height: 1.813rem;
			    background-image: url(/client/asset/images/cover_sold_out.png);
			    background-size: cover;
		    }
		    .mobile-price {
				position:absolute;
				left:.4rem;
				top:.3rem;
				z-index:3;
				width:.78rem;
				height:.78rem;
				background:url(/client/asset/images/indexTitle_1.png) no-repeat;
				background-size:cover;
			}
		    .flash-price {
				position:absolute;
				left:.4rem;
				top:.3rem;
				z-index:3;
				width:.78rem;
				height:.78rem;
				background:url(/client/asset/images/jpsg.png) no-repeat;
				background-size:cover;
			}
			> img {
				width:4.2rem;
			    height:4.2rem;
		    }
		}
		&:nth-child(2n+1) {
			> div {
				border-right:1px solid #d7d7d7;
			}
		}
		.country {
		    display: block;
		    margin: .4rem 0 .12rem;
		    line-height: .54rem;
			color:#333;
			font-size:.24rem;
				i {
				    width: .46rem;
				    height: .46rem;
				    display: inline-block;
				    margin-right: .2rem;
				    vertical-align: top;
				}
				img {
				    width: 100%;
				}
		}
		.goods-desc{
            display: -webkit-box;
			color:#333;
			height:.98rem;
			line-height:.5rem;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            text-overflow: ellipsis;
            white-space:normal;
            margin-bottom: .12rem;
		}
		.prices {
			display: flex;
			justify-content:space-between;
			align-items: center;
			overflow: hidden;
			width: 100%;
			.now-price {
			    display: block;
			    font-size: .5rem;
			    line-height: .6rem;
			    color: #ed1946;
			    display: block;
			    &:first-letter{
			    	font-size:.4rem;
			    	font-weight:normal;
			    	padding-right:.06rem;
			    }
			    flex-shrink:0;
			    min-width: 50%;
			}
			.old-price {
		 	    display: block;
		 	    height: .5rem;
			    font-size: .32rem;
			    line-height: .6rem;
			    color: #999;
			    text-decoration: line-through;
			    overflow: hidden;
		 	    text-overflow:ellipsis;
		 	    flex-grow:1;
		 	    max-width: 40%;
                padding-left: .1rem;
			}
		}
	}
		
}
 
 
.menu-slider,
.second-slider{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    background: #f7f7f7;
    z-index: 102;
    overflow-y: auto;
}
.rollIn-animate {
    transform: translate3d(0,0,0);
    -webkit-transform: translate3d(0,0,0);
    -moz-transform: translate3d(0,0,0);
    -o-transform: translate3d(0,0,0);
    -ms-transform: translate3d(0,0,0);
    width: 80%;
    right: -80%;
}
.rollIn-slideLeft {
    transform: translate3d(-100%,0,0);
    -webkit-transform: translate3d(-100%,0,0);
    -moz-transform: translate3d(-100%,0,0);
    -o-transform: translate3d(-100%,0,0);
    -ms-transform: translate3d(-100%,0,0);
}
.rollIn-animate, .rollOut-animate {
    -o-transition: all .5s ease;
    -ms-transition: all .5s ease;
    -webkit-transition: all .5s ease;
    transition: all .5s ease;
    -moz-transition: all .5s ease;
}
.rollOut-slideLeft {
    transform: translate3d(-80%,0,0);
    -webkit-transform: translate3d(-80%,0,0);
    -moz-transform: translate3d(-80%,0,0);
    -o-transform: translate3d(-80%,0,0);
    -ms-transform: translate3d(-80%,0,0);
}
 
.showHave{
	height:1.18rem;
	background-color:#fff;
	dl {
		padding:0 .28rem;
		dt {
			float:left;
			width:60%;
			line-height:1.18rem;
		}

		dd {
			width: 1.94rem;
		    float: right;
		    height: 1.18rem;
		    padding: 0 .32rem;
			position:relative;
			left:.32rem;
			i {
				width:44px;
				height:23px;
				display:block;
				background:url(/client/asset/images/showOff.png) 0 -1px no-repeat;
				background-size:100%;
				margin-top:.2rem;
			}
			&.onShow i {
				width:44px;
				height:23px;
				display:block;
				background:url(/client/asset/images/showOff.png) 0 -56px no-repeat;
				background-size:100%;
				margin-top:.2rem;
			}
		}
	}
	dl:after{
		content: " ";
		display: block;
		visibility: hidden;
		height: 0;
		clear: both;
	}

}
.helpList{
	padding:.3rem 0 0;
	dl {
		background-color:#fff;
		padding:.3rem .28rem;
		border-bottom:1px solid #d7d7d7;
		height:1rem;
		line-height:.4rem;
		dd {
			width:.5rem;
			float:right;
			vertical-align:top;
		}
		&:after,
		dt {
			float:left;
			width:80%;
		}
	}

	a:last-child dl{
		border-bottom:0;
	}
}
 
 
.second-slider .helpList dl dd{
