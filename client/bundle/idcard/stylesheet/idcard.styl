@import "./idcard.css";

body{
    background: #F1F1F1;
}
.idcard-container {
	height: 100%;
	font-size: .36rem;
    &>div{
        height:100%;
    }
    .scene-group>.scene{
        background:#f7f7f7;
        height:100%;
    }
}
.idcard-content{
    height:100%;
    display:flex;
    flex-direction:column;
    .idcard-inner{
        flex:1;
        overflow-x:hidden;
        overflow-y:auto;
        .list{
        	padding-bottom: 1.2rem;
        }
    }
    .img-view{
    	position: absolute;
    	left: 0;
    	top: 0;
    	height: 100%;
    	width: 100%;
    	z-index: 101;
    	padding-top: 1.17rem;
    	display: none;
    	&.active{
    		display: block;
    	}
    	.img-view-inner{
    		display: flex;
	        align-items: center;
	        justify-content: center;
	    	height: 100%;
	    	width: 100%;
    		background-color: #000;
    		>img{
    			width: 100%;
	    		max-width: 100%;
	    		max-height: 100%;
	    	}
    	}
    }
}

.idcard-form-content {
    height:100%;
    display:flex;
    flex-direction:column;
    .idcard-form-inner{
        flex:1;
        overflow-x:hidden;
        overflow-y:auto;
    }
}
header .screening{
	font-size: .4rem;
}
.reset-box{
    position: relative;
    .reset-btn{
        position: absolute;
        right: .32rem;
        top: .4rem;
        display: none;
        &.active{
            display: block;
        }
        .iconfont{
            font-size: .426666rem;
            color: #666;
        }
    }
}