@import "./idcard.css";

body{
    background: #F1F1F1;
}
.idcard-container {
	height: 100%;
    &>div{
        height:100%;
    }
    .scene-group>.scene{
        background:#f7f7f7;
        height:100%;
    }
}
.idcard-content{
    height:100%;
    display:flex;
    flex-direction:column;
    .idcard-inner{
        flex:1;
        overflow-x:hidden;
        overflow-y:auto;
        .list{
        	padding-bottom: 1.2rem;
        }
    }
    .img-view{
    	position: absolute;
    	left: 0;
    	top: 0;
    	background-color: #000;
    	height: 100%;
    	width: 100%;
    	z-index: 101;
        align-items: center;
        justify-content: center;
        display: flex;
    	display: none;
    	&.active{
    		display: flex;
    	}
    	>img{
    		max-width: 100%;
    		max-height: 100%;
    	}
    }
}

.idcard-form-content {
    height:100%;
    display:flex;
    flex-direction:column;
    .idcard-form-inner{
        flex:1;
        overflow-x:hidden;
        overflow-y:auto;
    }
}
header .screening{
	font-size: .4rem;
}