.text-overflow{
    overflow:hidden;
    white-space:nowrap;
    text-overflow:ellipsis;
}

.order-group {
    font-size: .7rem;
    margin: .5rem 0;
    padding: 0 .4rem;
    background: #FFF;
    overflow: hidden;
    .overall-promotion {
        line-height: 1.75rem;
    }
    .group-mall {
        background: #EEE;
        display: flex;
        padding: .25rem .25rem;
        .check-label {
            padding-left: .25rem;
            color: #AAA;
            flex: 2.5;
            b {
                color: #555;
                padding-left: .15rem;
            }
        }
        .group-shipfee {
            flex: 1;
            text-align: right;
            color: #AAA;
            b {
                color: $pink-color;
                padding-left: .15rem;
            }
        }
    }
    .group-promotion {
        display: flex;
        padding: .25rem 0;
        border-bottom: .05rem solid #DDD;
        .promotion-name {
            padding: .1rem .2rem;
            font-size: .6rem;
            background: $pink-color;
            color: #FFF;
        }
        .promotion-desc {
            padding: .1rem .25rem;
        }
    }
    .group-goods {
        .group-good {
            display: flex;
            align-items: center;
            padding: 0 0 .5rem 0;
            border-bottom: .05rem solid #DDD;
            .group-good-thumbnail {
                flex: 3.6;
                padding: .25rem;
            }
            .group-good-detail {
                flex: 9;
                h3 {
                    @extend .text-overflow;
                    font-size: .75rem;
                    padding: .25rem 0;
                }
                p {
                    margin: 0;
                    line-height: 1.1rem;
                    color: #AAA;
                    font-size: .65rem;
                    b {
                        color: #333;
                        padding: 0 .15rem;
                        font-weight: 400;
                        &.through-line {
                            text-decoration: line-through;
                            color: #AAA;
                        }
                    }
                }
            }
        }
    }
    .group-total {
        line-height: 1.75rem;
        &>span {
            padding-right: .5rem;
            color: #AAA;
            label {
                padding: .1rem .2rem;
                font-size: .6rem;
                background: #333;
                color: #BE9212;
            }
            b {
                padding: .1rem .2rem;
                font-weight: 400;
                color: #333;
            }
        }
    }

}