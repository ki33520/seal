.loading{
    position:absolute;
    top:0;
    left:0;
    width:100%;
    height:100%;
    // bottom:0;
    // right:0;
    background:url("/client/asset/image/loading.gif") no-repeat 50% 50% #FFF;
    background-size:30%;
    z-index:999;
    visibility:hidden;
    opacity:0;
    transition:all .5s ease-in;
    &.active{
        visibility:visible;
        opacity:1;
    }
}