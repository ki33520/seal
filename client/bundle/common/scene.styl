.scene-group{
    // position:relative;
    width:100%;
    height:100%;
    // transform:translate3d(0,0,0);
    &.left-to-right{
        animation:fade-in .3s ease;
        // animation:leftToRight .3s ease-in .1s;            
    }
    &.right-to-left{
        animation:fade-in .3s ease;
        // animation:rightToLeft .3s ease-in .1s;
    }
    &>.scene{
        width:100%;
        height:100%;
        overflow:hidden;
        // visibility:hidden;
        // position:absolute;
        // left:100%;
        // top:0;
        z-index:1000;
        background:#FFF;
        // opacity:0;
        display:none;
        box-shadow:0 px2rem(2) px2rem(2) 0 rgba(0,0,0,.14),
            0 px2rem(3) px2rem(1) px2rem(-2) rgba(0,0,0,.2),
            0;
        // -webkit-backface-visibility: hidden;
        &.scrollable{
            overflow-x:hidden;
            overflow-y:auto;
            -webkit-overflow-scrolling: touch;
        }
        &.prev{
            // z-index:1001;
            opacity:0.3;
            visibility:visible;
        }
        &.active{
            z-index:1002;
            position:static;
            // opacity:1;
            display:block;
            // visibility:visible;
            // animation:rightToLeft .3s ease-in;
        }
    }
}

@keyframes fade-in{
    from{
        opacity:0.7
    }
    to{
        opacity:1
    }
}
@keyframes rightToLeft{
    from{
        transform:translate3d(-100%,0,0)
    }
    to{
        transform:translate3d(0,0,0)
    }
}
@keyframes leftToRight{
    from{
        transform:translate3d(100%,0,0)
    }
    to{
        transform:translate3d(0,0,0)
    }
}