
.switcher{
    position:relative;
    height:100%;
    &>.switcher-case{
        width:100%;
        overflow-x:hidden;
        overflow-y:auto;
        -webkit-overflow-scrolling: touch;
        height:100%;
        // visibility:hidden;
        position:absolute;
        z-index:1000;
        background:#FFF;
        opacity:0;
        &.prev{
            z-index:1001;
            opacity:0.3;
        }
        &.active{
            z-index:1002;
            opacity:1;
            box-shadow:0 px2rem(2) px2rem(2) 0 rgba(0,0,0,.14),
            0 px2rem(3) px2rem(1) px2rem(-2) rgba(0,0,0,.2),
            0 px2rem(1) px2rem(5) 0 rgba(0,0,0,.12)
            // visibility:visible;
            // transform:translate3d(0,0,0)
            animation:rightToLeft .3s ease-in;
        }
        &:first-child.active{
            animation:leftToRight .3s ease-in;            
        }
    }
}

@keyframes rightToLeft{
    from{
        transform:translate3d(100%,0,0)
    }
    to{
        transform:translate3d(0,0,0)
    }
}
@keyframes leftToRight{
    from{
        transform:translate3d(-100%,0,0)
    }
    to{
        transform:translate3d(0,0,0)
    }
}