@import "../component/masklayer";
.pop-qr{
    position: absolute;
    overflow: hidden;
    z-index: 999;
    top: 50%;
    left: 50%;
    width: 7.2rem;
    margin-left: -3.6rem;
    margin-top: -5rem;
    display: none;
    text-align: center;
    &.active{
        display: block;
    }
    & > .btn-close{
        position: absolute;
        box-sizing: content-box;
        border-radius: 50%;
        border: px2rem(1) solid #fff;
        color: #fff;
        line-height: .7rem;
        font-size: .45rem;
        font-weight: bold;
        width: .7rem;
        height: .7rem;
        text-align: center;
        right: 0.3rem;
        top: 0.2rem;
    }
    & > .top{
        font-size: .45rem;
        color: #fff;
        line-height: 1.2rem;
        height: 1.2rem;
        border-radius: .2rem .2rem 0 0;
        background-color: #801fa0;
    }
    & > .center{
        padding-top: .4rem;
        line-height: 0;
        height: 6.3rem;
        background-color: #fff;
        & > img{
            width: 80%;
        }
    }
    & > .bottom{
        color: #801fa0;
        font-size: .425rem;
        line-height: .6rem;
        border-radius: 0 0 .2rem .2rem;
        padding-bottom: .3rem;
        background-color: #fff;
    }
}