.bottom-nav{
	width:100%;
	height:1.38rem;
	overflow:hidden;
	overflow-x:auto;
	border-top:1px solid #d7d7d7;
	position:fixed;
	bottom:0;
	left:0;
	background-color:#fff;
	z-index:990;
	ul {
		height:1.38rem;
		li {
			float:left;
			width:20%;
			display: flex;
			height: 100%;
            justify-content: center;
            align-items: center;
			a {
				display:block;
				text-align:center;
				font-size:.27rem;
				i {
					margin-bottom:.1rem;
				}
				&.nav-hover{
					color:#801da1;
				}
			}
			i {
				width:26px;
				height:21px;
				display:block;
				margin:0 auto;
				background-image:url(/client/asset/images/botNav.png);
			}
			&:nth-child(1) i{
				background-position:0 0;
				background-size:100%;
			}
			&:nth-child(1) a.nav-hover i{
				background-position:0 -21px;
				background-size:100%;
			}
			&:nth-child(2) i{
				background-position:0 -42px;
				background-size:100%;
			}
			&:nth-child(2) a.nav-hover i{
				background-position:0 -62px;
				background-size:100%;
			}
			&:nth-child(3) i{
				background-position:0 -83px;
				background-size:100%;
			}
			&:nth-child(3) a.nav-hover i{
				background-position:0 -104px;
				background-size:100%;
			}
			&:nth-child(4) i{
				background-position:0 -125px;
				background-size:100%;
			}
			&:nth-child(4) a.nav-hover i{
				background-position:0 -146px;
				background-size:100%;
			}
			&:nth-child(5) i{
				background-position:0 -168px;
				background-size:100%;
			}
			&:nth-child(5) a.nav-hover i{
				background-position:0 -189px;
				background-size:100%;
			}
		}
	}
}
